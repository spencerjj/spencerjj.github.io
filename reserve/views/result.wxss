.boss{
  position: fixed;
  width: 100%;
  height:100%;
  top:0;
  left:0;
  background:rgba(0,0,0,.8);
  z-index: 99;
}
.main{
  width:100%;
  height:680rpx;
  position: fixed;
  bottom:0;
  left:0;
  background:white;
  padding:30rpx;
  color:#000;
  font-size:30rpx;
  box-sizing: border-box;
}
.top{
  display: flex;
  justify-content: space-between;
  padding-bottom:20rpx
}
.title{
  font-size: 40rpx;
  font-weight: 500;
}
.details{
  padding-bottom:20rpx
}
.action{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  line-height: 100rpx;
  margin-top:30rpx
}
.action view{
  width: 40%;
  text-align: center;
  height:80rpx;
  line-height:80rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.action view:first-child{
  background:#1989fa;
  color:white
}
.action view:nth-child(2){
  color:#1989fa;
  border:1rpx solid #1989fa
}
.hover1{
  opacity: .8;
}