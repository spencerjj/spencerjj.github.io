.lists{
  width: 90%;
  margin-left: 5%;
  padding-bottom: 50rpx;
}
.listItem{
  background:#f4f6f6;
  padding-bottom:15rpx;
  position: relative;
  margin-top:30rpx
}
.ball{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  background:white
}
.left{
  left: -15rpx;
  top: 85rpx;
}
.right{
  right: -15rpx;
  top: 85rpx;
}
.title{
  height:100rpx;
  line-height: 100rpx;
  background-image: linear-gradient(to right, #000 , #555);
  color:#fff;
  font-size: 35rpx;
  padding:0 30rpx 0 30rpx;
  box-sizing: border-box;
}
.btitle{
  height:100rpx;
  line-height: 100rpx;
  background-image: linear-gradient(to right, #000 , #555);
  color:#fff;
  font-size: 35rpx;
  padding:0 30rpx 0 30rpx;
  box-sizing: border-box;
  display: flex;
}
.reason{
  height: 40rpx;
  background:#555;
  line-height: 40rpx;
  padding:0 10rpx 0 10rpx;
  font-size: 28rpx;
  margin-top:30rpx;
  margin-right:10rpx
}
.infos{
  padding:30rpx 40rpx 0 40rpx;
}
.details{
  padding-bottom:30rpx;
  display:flex;
  justify-content: space-between;
}
.action{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  line-height: 100rpx;
  margin-top:10rpx
}
.action view{
  width: 40%;
  text-align: center;
  height:80rpx;
  line-height:80rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.action view:first-child{
  border:1rpx solid #000;
  color:#000
}
.action view:nth-child(2){
  color:#fff;
  background:#000;
}
.cant{
  background:#999 !important
}
.hover1{
  opacity: .6;
}
.hover2{
  background:#ccc
}
.code{
  width: 100%;
  height: 100%;
}