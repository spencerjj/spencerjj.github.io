/* pages/index/home.wxss */
.container{
  width: 90%;
  margin-left:5%
}
.title{
  height: 100rpx;
  line-height: 100rpx;
  font-size:45rpx;
  font-weight: 500;
  color:#01015e
}
.lists .listItem:nth-child(n+2){
  margin-top: 30rpx;
}
.listItem{
  border-bottom:2rpx solid #ccc
}
.banner{
  width: 100%;
  height: 330rpx;
  overflow: hidden;
  border-radius: 30rpx;
}
.banner image{
  width: 100%;
}
.mark{
  border:2rpx solid #666;
  color:#666;
  border-radius: 10rpx;
  font-size:28rpx;
  width: 80rpx;
  text-align: center;
  font-weight: 500;
  margin-top:30rpx;
  margin-bottom:20rpx
}
.info{
  font-size:38rpx;
  font-weight: 500;
}
.location{
  display: inline-flex;
  align-items: center;
  color:#666;
  margin-top: 20rpx;
  font-size: 35rpx;
  margin-bottom: 30rpx;
}