/* yuyue */
.container{
  padding-bottom:300rpx;
  position: relative;
}
.share{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right:30rpx;
  top:30rpx
}
.banner{
  width: 100%;
}
.banner image{
  width: 100%;
}
.top{
  height: 250rpx;
  width: 90%;
  margin-left: 5%;
  border-bottom:1rpx solid #eee;
  padding-top:30rpx
}
.ttitle{
  font-size:50rpx;
  padding-bottom:10rpx;
}
.content{
  width: 90%;
  margin-left: 5%;
  border-bottom:1rpx solid #eee;
  padding-bottom:30rpx
}
.btitle{
  height:120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  font-weight: bolder;
  padding-left: 20rpx;
  position: relative;
}
.intro{
  line-height: 60rpx;
  color:#666;
  font-size: 35rpx;
  margin:0
}

.tdetail{
  display: inline-flex;
  align-items: center;
  color:#666;
  margin-top: 10rpx;
  font-size: 35rpx;
}
.ctitle{
  font-size:40rpx;
  padding-bottom:10rpx;
}
.caddress{
  font-size: 35rpx;
  color:#666;
  padding-bottom:20rpx
}
.footer{
  width: 100%;
  height:180rpx;
  background:white;
  display: flex;
  justify-content: space-between;
  box-shadow: 0rpx 0rpx 20rpx 10rpx #eee;
  position: fixed;
  bottom:0;
  left: 0;
  padding:0 30rpx 0 30rpx;
  box-sizing: border-box;
  z-index: 9;
}
.notice{
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bolder;
  margin-top: 30rpx;
  color: #000;
}
.reBtn{
  min-width: 40%;
  background:#1989fa;
  color:white;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  font-weight: bolder;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 30rpx;
}
.timeTop{
  min-height: 400px;
  overflow-y: auto;
}
.calendar {
  --calendar-height: 325px;
}
.van-calendar__selected-day{
  width: 54rpx !important;
  height:54rpx !important;
  border-radius:50% !important
}
.timeCon{
  width: 94%;
  margin-left:3%;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  flex-wrap: wrap;
  border-top:5rpx solid white;
  background:white;
  margin-top:-80rpx;
  padding-bottom:120rpx
}
.timeItem{
  width: 46%;
  text-align: center;
  background:#f4f4f4;
  margin-top:30rpx;
  height:80rpx;
  line-height: 80rpx;
  font-weight: bolder;
  font-size: 35rpx;
  position: relative;
}
.cant{
  width: 46%;
  text-align: center;
  margin-top:30rpx;
  height:80rpx;
  line-height: 80rpx;
  font-weight: bolder;
  font-size: 35rpx;
  color:#ccc;
  border:2rpx dashed #ccc;
  box-sizing: border-box;
  position: relative;
  background:white
}
.mark{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 50rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  background:#eee;
  color:#bbb;
  border-radius: 5rpx;
}
.timeSelected{
  background:#1989fa !important;
  color:white !important
}
.timeBtm{
  width: 94%;
  height: 90rpx;
  margin-left:3%;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  position: fixed;
  bottom:0;
  background:white;
  padding-bottom:20rpx;
}
.timeShow{
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bolder;
  margin-top: 10rpx;
  color: #666;
}
.reserve{
  min-width: 40%;
  background:#1989fa;
  color:white;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  font-weight: bolder;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
.hover1{
  opacity: .6;
}
.stop{
  overflow-y: hidden;
}