.i-input-number {
  color: #495060
}

.i-input-number view {
  display: inline-block;
  line-height: 20px;
  padding: 10px 0;
  text-align: center;
  min-width: 60px;
  box-sizing: border-box;
  vertical-align: middle;
  font-size: 20px;
  border: 2rpx solid #dddee1
}

.i-input-number-minus {
  border-right: none;
  border-radius: 2px 0 0 2px
}

.i-input-number-plus {
  border-left: none;
  border-radius: 0 2px 2px 0
}

.i-input-number-text {
  border: 2rpx solid #dddee1;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  height: 40px;
  width: 60px;
  min-height: auto;
  font-size: 20px;
  line-height: 40px
}

.i-input-number-disabled {
  border-color: #dddee1;
  color: #bbbec4;
  background: #f7f7f7
}