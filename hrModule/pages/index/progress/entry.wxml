<view class="content">
	<!-- <input class="main" value="入职流程表单" placeholder='入职流程表单' placeholder-style='color:#af9d7f' bindinput='mainInput' disabled></input> -->
	<view class="title">
		<view class="c1">
			<text>员工姓名</text>
		</view>
		<view class="codePicker">
			<text>{{lists.name}}</text>
			<image src="../../../images/file.png" bindtap="copy" data-cont="{{lists.name}}"></image>
		</view>
	</view>
	<view class="title">
		<view class="c1">
			<text>单位</text>
		</view>
		<view class="codePicker">
			<text>{{lists.companyName}}</text>
			<image src="../../../images/file.png" bindtap="copy" data-cont="{{lists.companyName}}"></image>
		</view>
	</view>
	<view class="title">
		<view class="c1">
			<text>工号</text>
		</view>
		<view class="codePicker">
			<text>{{lists.oaCode}}</text>
			<image src="../../../images/file.png" bindtap="copy" data-cont="{{lists.oaCode}}"></image>
		</view>
	</view>
	<view class="title">
		<view class="c1">
			<text>部门</text>
		</view>
		<view class="codePicker">
			<text>{{lists.officeName}}</text>
		</view>
	</view>
	<view class="sub">
		<view class="c1">
			<text>入职岗位</text>
		</view>
		<view class="codePicker">
			<text>{{lists.postName}}</text>
		</view>
	</view>
	<view class="title">
		<view class="c1">
			<text>直接上级</text>
		</view>
		<view class="codePicker">
			<text>{{lists.mgrEmpName}}</text>
			<image src="../../../images/file.png" bindtap="copy" data-cont="{{lists.mgrEmpName}}"></image>
		</view>
	</view>
	<view class="title">
		<view class="c1">
			<text>手机号码</text>
		</view>
		<view class="codePicker">
			<text>{{lists.mobile}}</text>
			<image src="../../../images/file.png" bindtap="copy" data-cont="{{lists.mobile}}"></image>
		</view>
	</view>
	<view class="sub">
		<view class="c1">
			<text>入职时间</text>
		</view>
		<view class="codePicker">
			<text>{{lists.conStartDate}}</text>
		</view>
	</view>
	<view class="title">
		<view class="c1">
			<text>是否开通oa<text style="color:red;font-size:25rpx">*</text></text>
		</view>
		<picker value="{{index1}}" range="{{array1}}" bindchange="pickChange1"  disabled="{{current==1&&lists.bpm.activityId=='DeptManager'?false:true}}">
			<view class="timePicker {{ifoa?'':'pickerError'}}">
				<text wx:if="{{index1==3}}" style="color:#af9d7f">请选择...</text>
				{{array1[index1]}}
				<image class="arraw" src="http://img.gagctv.com/17112314452261654"></image>
			</view>
		</picker>
	</view>
	<view class="title">
		<view class="c1">
			<text>是否开通门禁<text style="color:red;font-size:25rpx">*</text></text>
		</view>
		<picker value="{{index2}}" range="{{array1}}" bindchange="pickChange2"  disabled="{{current==1&&lists.bpm.activityId=='DeptManager'?false:true}}">
			<view class="timePicker  {{ifdoor?'':'pickerError'}}">
				<text wx:if="{{index2==3}}" style="color:#af9d7f">请选择...</text>
				{{array1[index2]}}
				<image class="arraw" src="http://img.gagctv.com/17112314452261654"></image>
			</view>
		</picker>
	</view>
	<view class="title">
		<view class="c1">
			<text>是否开通邮箱<text style="color:red;font-size:25rpx">*</text></text>
		</view>
		<picker value="{{index3}}" range="{{array1}}" bindchange="pickChange3" disabled="{{current==1&&lists.bpm.activityId=='DeptManager'?false:true}}">
			<view class="timePicker  {{ifemail?'':'pickerError'}}">
				<text wx:if="{{index3==3}}" style="color:#af9d7f">请选择...</text>
				{{array1[index3]}}
				<image class="arraw" src="http://img.gagctv.com/17112314452261654"></image>
			</view>
		</picker>
	</view>
	<view class="title">
		<view class="c1">
			<text>是否参加培训<text style="color:red;font-size:25rpx">*</text> </text>
		</view>
		<picker value="{{index4}}" range="{{array1}}" bindchange="pickChange4"  disabled="{{current==1&&lists.bpm.activityId=='DeptManager'?false:true}}">
			<view class="timePicker  {{iftrain?'':'pickerError'}}">
				<text wx:if="{{index4==3}}" style="color:#af9d7f">请选择...</text>
				{{array1[index4]}}
				<image class="arraw" src="http://img.gagctv.com/17112314452261654"></image>
			</view>
		</picker>
	</view>
	<view class="title" style="z-index:1 !important" wx:if="{{oaEmployEntry.bpm.activityId != 'anth'}}">
		<view class="c1">
			<text>OA密码<text style="color:red;font-size:25rpx">*</text></text>
		</view>
			<input class="c1Input"  placeholder='请输入...' placeholder-style='color:#af9d7f;padding:0;margin:0'  bindinput='hinput1' value="{{oaPwd}}" disabled="{{current!=1}}"></input>
	</view>
	<view class="title" style="z-index:1 !important" wx:if="{{oaEmployEntry.bpm.activityId != 'anth'}}">
		<view class="c1">
			<text>邮箱账号<text style="color:red;font-size:25rpx">*</text></text>
		</view>
			<input class="c1Input"  placeholder='请输入...' placeholder-style='color:#af9d7f;padding:0;margin:0'  bindinput='hinput2' value="{{emailAccount}}" disabled="{{current!=1}}"></input>
	</view>
	<view class="title" style="z-index:1 !important" wx:if="{{oaEmployEntry.bpm.activityId != 'anth'}}">
		<view class="c1">
			<text>邮箱密码<text style="color:red;font-size:25rpx">*</text></text>
		</view>
			<input class="c1Input" placeholder='请输入...' placeholder-style='color:#af9d7f;padding:0;margin:0' bindinput='hinput3' value="{{emailPwd}}" disabled="{{current!=1}}"></input>
	</view>
	<view class="title" style="z-index:1 !important">
		<view class="c1">
			<text>备注</text>
		</view>
		<view class="c1Input">{{lists.remarks.length>0?lists.remarks:'无备注'}}</view>
	</view>
	<view class="title" style="z-index:1 !important" wx:if="{{current==1&&can}}">
		<view class="c1">
			<text>审批意见</text>
		</view>
		<input class="number" placeholder='常用语: 同意  已阅' placeholder-style='color:#af9d7f;padding:0;margin:0' bindinput='hinput' value="{{hint}}"></input>
	</view>
</view>
<view class="bottom">
	<button class="progress {{current==1&&can?'btnwid1':'btnwid'}}" bindtap='progress' hover-class='hover1' hover-stay-time='50'>流程追踪</button>
	<button class="publish btnwid1" bindtap='handleOpen' wx:if="{{current==1&&can}}" hover-class='hover2' hover-stay-time='50'>审批操作</button>
</view>
<i-action-sheet visible="{{visible}}" actions="{{actions}}" show-cancel bind:cancel="handleCancel" bind:click="handleClickItem" />
<view class='pocket_input' wx:if="{{inputShow}}">
	<input type='text' placeholder-style='input-placeholder' cursor='{{cursor_position}}' class='input_style' placeholder='{{notice}}' focus='{{focus}}' cursor-spacing="2" adjust-position='true' bindfocus="bindfocus" bindblur="bindblur" bindconfirm="sendComment" confirm-type="done" bindinput='getComment' maxlength='500'></input>
</view>
<view style="width:100%;height:100%;position:fixed;top:0;left:0;background:#333;opacity:.8;z-index:99" wx:if="{{inputShow}}"></view>
<i-toast id="toast" />
<i-message id="message" />
<i-drawer mode="right" visible="{{showRight1}}" bind:close="progress">
	<scroll-view  class="proShow" scroll-y='true' catchtouchmove='true'>
		<view class="c1" style="margin-bottom:20rpx">
			<text style="font-weight:bolder;color:#1890ff;margin-left:10rpx;font-size:35rpx">流转信息</text>
		</view>
				<i-steps current="{{verticalCurrent}}" direction="vertical">
			<i-step  wx:for="{{proLists}}" icon="{{index==proLists.length-1?'brush':''}}">
			<view class="lists" slot="content">
			<view class="right">
				<view class="time1">
					<text class="timeLeft">环节名称:</text>
					<text class="timeRight">{{item.name}}</text>
				</view>
				<view class="time1">
					<text class="timeLeft">创建时间:</text>
					<text class="timeRight">{{item.createTime}}</text>
				</view>
				<view class="time1">
					<text class="timeLeft">完成时间:</text>
					<text class="timeRight">{{item.endTime}}</text>
				</view>
				<view class="time1">
					<text class="timeLeft">分配人员:</text>
					<text class="timeRight">{{item.assigneeInfo}}</text>
				</view>
				<view class="time1">
					<text class="timeLeft">审批意见:</text>
					<text class="timeRight">{{item.comment}}</text>
				</view>
			</view>
		</view>
			</i-step>
		</i-steps>
	</scroll-view >
</i-drawer>
<i-spin fix wx:if="{{loadAll}}"></i-spin>
