page {
  background-color: #f7f7f7;
  padding-bottom: 20rpx;
}

.card {
  width: 94%;
  margin-top: 20rpx;
  margin-left: 3%;
  height: auto;
  background: #fff;
  border: 1px #efefef solid;
  box-shadow: 1px 1px 3px #eee;
  padding-bottom: 30rpx;
}

.card-box1 {
  position: relative;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.card-box2 .card-box3{

  margin-top: 30rpx;
}

.card-box{
  width: 92%;
  height: auto;
  margin-left: 6%;
  margin-right: 2%;
}

.card-box1  .image-box {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  border-radius: 50%;
  overflow: hidden;
  position: relative
}

.card-box1 image {
  width: 100%;
  height: 100%
}
.card-box1 .wen {
  position: absolute;
  width: 100%;
  height: 20rpx;
  left: 0;
  top: 40rpx;
  z-index: 0;
  opacity: .3
}
.card-box1 .nameInput {
  border: 1px solid #eee;
  box-shadow: none;
  height: 60rpx;
  line-height: 60rpx;
  background: #69bcf9;
  font-size: 32rpx;
  color: #fff;
  display: inline-block;
  margin-left: 60rpx;
  text-align: center;
  width: 50%;
  border-radius:30rpx;
  font-weight: bolder;
}

.phcolor {
  color: #9b9b9b;
}

.card-box2 .title {
  width: auto;
height: 35rpx;
line-height: 60rpx;
font-size: 40rpx;
font-weight: bolder;
  color: #4a4a4a;
}

.card-box2 .tag-box {
  width: 100%;
  margin-top: 20rpx;
}

.card-box2 .tag-box>view {
  width: 100%;
  height: auto;
  margin: 6rpx 0 16rpx 0;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  -webkit-flex-wrap:wrap;
  -moz-flex-wrap:wrap;
  -ms-flex-wrap:wrap;
  flex-wrap:wrap;
}

.card-box2 .tag-box .tag {
  border-radius: 10rpx;
  height: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 60rpx;
  font-weight: bolder;
}

.card-box2 .tag-box .tag view {
  /* color: white; */
  font-size: 32rpx;

}

.group{
  display: flex;
  flex-wrap: wrap;
}
