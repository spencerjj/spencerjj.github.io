/* pages/my/account/addAccount.wxss */
page{
  position: relative;
  padding-bottom:100rpx
}
.banner{
  width: 100%;
}
.banner image{
  width: 100%;
}
.title1{
  font-size: 28rpx;
  color:#bfbfbf;
  height: 60rpx;
  line-height: 60rpx;
  margin-left:30rpx
}

.dis{
  background:#eee
}
.section{
  width: 96%;
  padding-left: 4%;
  border-bottom: 3rpx solid #9c9a9a;
  height: 110rpx;
  line-height: 110rpx;
  position: relative;
}
.s1{
  float:left;
  width: 25%;
  text-align: right;
  color:#333
}
.fill1{
  float: left;
  width: 70%;
  text-align: center;
  height:110rpx;
  line-height: 110rpx;
  font-weight: bolder;
  color:#333
}
.action{
  text-align: center;
  width: 80%;
  margin-left:10%;
  height: 70rpx;
  font-size: 30rpx;
  color:white;
  line-height: 70rpx;
  border-radius: 10rpx;
  background: #ccc;
  margin-top:100rpx;
}
.save{
  background: #dcdcdc !important;
}
.hover1{
  background:#ccc !important
}

.hide{
  display: none
}
.arraw{
  width: 30rpx;
  height: 30rpx;
  top:50%;
  margin-top: -15rpx;
  right: 30rpx;
  position: absolute;
  transform: rotate(-90deg);
}
.bottom{
  position: fixed;
  bottom:0;
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  border-top:3rpx solid #9c9a9a;
  background:#dcdcdc;
  text-align: center;
  z-index: 99;
}