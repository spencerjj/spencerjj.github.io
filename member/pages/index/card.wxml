<view class="showCode" wx:if="{{show}}" bindtap="onClose">
  <view class="pannel">
    <view class="barcode">
      <canvas canvas-id="barcode" />
      <view class="barnum">{{nowNum}}</view>
    </view>
    <view class="qrcode">
      <canvas class='canvas' canvas-id='canvas'></canvas>
    </view>
  </view>
</view>

