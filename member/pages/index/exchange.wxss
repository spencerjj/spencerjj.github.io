/* pages/index/order.wxss */
page{
  background:white;
  padding-bottom:50rpx
}
.top {
  width: 100%;
  height: 300rpx;
  background: #feaf04;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  position: relative;
}

.top:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -11px;
  content: "";
  z-index: 1;
  height: 20px;
  width: 100%;
  border-radius: 80%;
  background: #fff;
}

.top>view {
  text-align: center;
  margin: 50rpx;
}

.tleft {
  font-size: 32rpx;
}

.tleft view:nth-child(2) {
  font-size: 40rpx;
  font-weight: bolder;
}

.tright {
  background: white;
  color: #fc9506;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 20rpx 5rpx #fc9506;
  font-size: 35rpx;
}

.middle {
  width: 90%;
  margin-left: 5%;
  padding-top:50rpx
}
.title{
  font-size: 40rpx;
  font-weight: 400;
}
.lists{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.item{
  width: 48%;
  height: 420rpx;
  text-align: center;
  background:#f6f6f6;
  margin-top:30rpx
}
.item image{
  width: 55%;
  margin-top:50rpx
}
.tip{
  margin-top:30rpx
}
.btn{
  border:1rpx solid #fab312;
  color:#fab312;
  width: 250rpx;
  margin:0 auto;
  margin-top:20rpx;
  border-radius: 10rpx;
}
.footer{
  border-top:10rpx solid #f6f6f6;
  margin-top:50rpx;
  font-size: 30rpx;
}
.footer view{
  padding-left:30rpx;
}
.footer view:first-child{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:2rpx solid #eee
}
.footer view:nth-child(2){
  margin-top:10rpx
}
.info{
  font-size: 25rpx;
  line-height: 40rpx;
}
.hover1 {
  opacity: .5;
}