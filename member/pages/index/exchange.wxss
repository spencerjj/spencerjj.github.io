/* pages/index/order.wxss */
page{
  background:#ececec;
  padding-bottom:50rpx
}
.banner{
  width: 100%;
  height: 420rpx;
  overflow: hidden;
  position: relative;
}
.banner image{
  width: 100%;
}
.point{
  position: absolute;
  left:40rpx;
  bottom:30rpx;
  color:white;
  font-weight: bolder;
}
.tright {
  background: #ddd;
  color: #333;
  font-size: 35rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.middle {
  width: 90%;
  margin-left: 5%;
}
.title{
  font-size: 40rpx;
  font-weight: 400;
}
.lists{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.item{
  width: 50%;
  text-align: center;
  margin-top:30rpx
}
.item image{
  width: 100%;
  margin-top:50rpx
}
.itop{
  position: relative;
  width: 70%;
  margin:0 auto
}
.itop .money{
  position: absolute;
  bottom:20rpx;
  left: 20rpx;
  font-size: 28rpx;
  font-weight: bolder;
  color:#555
}
.tip{
  font-size: 30rpx;
}
.ibottom{
  display: flex;
  justify-content: space-around;
  text-align: left;
  color:#555;
  font-weight: 500;
  font-size: 25rpx;
  margin-top:30rpx;
}
.ibottom>view:first-child{
  line-height: 50rpx;
}
.ibottom>view:nth-child(2){
  font-size: 20rpx;
  text-decoration:underline;
  line-height: 150rpx;
}
.footer{
  border-top:10rpx solid #f6f6f6;
  margin-top:50rpx;
  font-size: 30rpx;
}
.footer view{
  padding-left:30rpx;
}
.footer view:first-child{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:2rpx solid #eee
}
.footer view:nth-child(2){
  margin-top:10rpx
}
.info{
  font-size: 25rpx;
  line-height: 40rpx;
}
.hover1 {
  opacity: .5;
}