/* pages/index/my.wxss */
page{
  background: #eee
}
.top{
  height: 350rpx;
  /* background: #0DA8FF; */
  background:linear-gradient(#69bcf9 , #eee);
}
.left{
  width: 92%;
  line-height: 55rpx;
  margin-left:4%;
  padding-top:60rpx
}
.left image{
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  float: left
}
.left .nickName{
  margin-left: 130rpx;
  font-size: 40rpx;
  color: white
}
.left .title{
  margin-left: 130rpx;
  color: #eee;
  font-size: 32rpx
}
.pointBar{
  /* border:2rpx solid #999; */
  height: 130rpx;
  width: 94%;
  margin-left: 3%;
  border-radius: 10rpx;
  margin-top:20rpx;
  background: white;
  display: flex;
  justify-content: center;
  flex-direction: row;
}
.section{
  width: 33%;
  box-sizing: border-box;
  text-align: center;
  border-right: 2rpx solid #eee;
  height: 100rpx;
  line-height: 50rpx;
  margin-top:15rpx
}
.section:last-child{
  border:none
}
.section .num{
  font-weight: bolder;
  font-size: 40rpx;
  color:red
}
.section .name{
  color:#666;
  font-size:30rpx
}
 .period{
  width: 94%;
  height: 40rpx;
  color:white;
  margin-left: 3%;
  position: relative;
}
.picker{
  width: auto;
  text-align: center;
  float:right;
  border:1rpx solid white;
  padding:0 10rpx 0 20rpx;
  border-radius: 10rpx;
}
.arraw1{
  width: 40rpx;
  height: 45rpx;
  float: right;
}
.bottom{
  clear: both;
  margin-top:70rpx
}
.selection{
  width: 94%;
  background: white;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 3%;
  position: relative;
  font-size: 30rpx;
  margin-top:20rpx;
  box-shadow: 0 0 10rpx #ccc;
}
.secTab{
  background: #eee;
}
.arraw{
  width: 30rpx;
  height: 35rpx;
  top:50%;
  margin-top: -17.5rpx;
  right: 40rpx;
  position: absolute
}
.icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:50%;
  margin-top:-20rpx;
  left:20rpx
}
.text{
  margin-left: 13%;
  font-size: 30rpx;
}