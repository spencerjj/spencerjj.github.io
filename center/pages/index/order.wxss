
.nullDataInfo{
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #ddd;
  padding-top: 50rpx;
  padding-bottom:30rpx
}
.lists{
  width: 94%;
  margin-left: 3%;
  margin-top:20rpx;
  font-size: 30rpx;
}
.listItem{
  overflow: hidden;
  margin-top:10rpx;
  height: 190rpx;
  background:white;
  padding:10rpx 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.listItem>view:first-child{
  color:#888;
  margin-top:10rpx
}
.listItem>view:nth-child(2){
  color:#000;
  font-weight: bolder;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.listItem>view:nth-child(2)>view:nth-child(2){
  width: 150rpx;
  text-align: center;
  color:#D9A148
}
.listItem>view:nth-child(3){
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.listItem>view:nth-child(3)>view{
  width: 150rpx;
  color:#888;
  border:1rpx solid #888;
  border-radius: 20rpx;
  text-align: center;
  font-size: 25rpx;
  margin-top:10rpx
}
.showPage{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.3);
  display: flex;
  align-items: center;
  z-index: 99;
  transform: scale(0) translateY(200%);
  transition:all .3s
}
.show{
  opacity: 1;
  transform: scale(1) translateY(0);
}
.detailInfo{
  background:white;
  width: 88%;
  min-height: 400rpx;
  max-height: 80vh;
  overflow-y: auto;
  margin-left:6%;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx 5rpx #888;
  padding:20rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}
.detailTitle{
  color:#D9A148;
  font-weight: bolder;
  height: 80rpx;
  line-height: 80rpx;
}
.detailItem{
  display: flex;
  justify-content: space-between;
  color:#333;
  height: 80rpx;
  align-items: center;
}
.detailItem>view:nth-child(2){
  color:#D9A148
}
.btn{
  position: relative;
}
.btn1{
  height: 200rpx;
}
.btn2{
  height: 100rpx;
}
.btn>view{
  width: 120rpx;
  color:white;
  background-image: linear-gradient(to right,#f3d8aa,#D9A148);
  text-align: center;
  border-radius: 20rpx;
  font-size: 25rpx;
  position: absolute;
  bottom:0;
  right: 0;
}
