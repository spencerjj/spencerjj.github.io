/* pages/index/store.wxss */
.top{
  height: 90rpx;
  width: 100%;
  background:white;
  padding-top:10rpx;
  position: relative;
}
.top input{
  width: 94%;
  margin-left:3%;
  background:#eee;
  height: 80rpx;
  line-height: 80rpx;
  padding-left:80rpx;
  box-sizing: border-box;
  border-radius: 40rpx;

}
.actItem{
  width: 94%;
  height: 300rpx;
  margin-top:35rpx;
  margin-left:3%;
  background:#fff;
  position: relative;
  border-radius: 20rpx;
}
.actItem>view:first-child{
  width: 35%;
  height: 250rpx;
  margin-top:25rpx;
  margin-left:30rpx;
  overflow: hidden;
  border-radius: 10rpx;
  float: left;
}
.actItem>view:first-child image{
  width: 100%;
  height: 250rpx;
}
.actItem>view:nth-child(2){
  float: left;
  margin-left:30rpx;
  margin-top:70rpx;
  font-size: 38rpx;
  font-weight: bolder;
  width: 50%;
}
.actItem>view:nth-child(2) view:nth-child(1){
  height: 120rpx;
}
.actItem>view:nth-child(2) view:nth-child(2){
  font-size: 28rpx;
}
.buskmark{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}
.buskmark image{
  width:50rpx;
  height: 50rpx;
  animation: loadingRotate 0.8s linear infinite
}

@keyframes loadingRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}