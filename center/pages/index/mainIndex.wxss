.content{
  padding-bottom: 100rpx;
}
.guide{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  background:white
}
.guideFix{
  position: sticky;
  top:0;
  left: 0;
  z-index: 2;
}
.guideItem{
  width: 25%;
  text-align: center;

}
.guideItem view:first-child{
  width: 60rpx;
  height: 5rpx;
  margin:0 auto;
  margin-top:30rpx
}
.vselect{
  background:#c39c61;
}
.tselect{
  color:#c39c61;
}
.eselect{
  -webkit-text-stroke:1rpx #c39c61 !important;
}
.gtitle{
  font-weight: 900;
  font-size:32rpx;
  margin-top:10rpx
}
.etitle{
  font-size: 16rpx;
  font-weight: bolder;
  -webkit-text-stroke: 1rpx black;  
  -webkit-text-fill-color : transparent;
  color:#fff;
  transform: scale(1,1.8);
  margin-top:10rpx;
  text-align: center;
  overflow: hidden;
}
.activity{
  min-height: 1000rpx;
  width: 94%;
  margin:0 auto;
}
.showCode{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.5);
  padding-top:10vh;
  z-index: 99;
  transform: scale(0);
  transition:all .3s
}
.show{
  opacity: 1;
  transform: scale(1);
}
.codeCon{
  text-align: center;
  width: 90%;
  margin-left: 5%;
  position: absolute;
  background:white;
  padding:30rpx 0;
  border-radius: 30rpx;
}
.rule{
  width: 80%;
  font-size: 30rpx;
  color:#999;
  margin:0 auto
}
.rtitle{
  color:#c79f62;
  font-weight: 500;
  font-size: 40rpx;
}
.tnotice{
  font-size: 28rpx;
  color:#c79f62;
  font-weight: 500;
}
.rtitle1{
  font-size: 28rpx;
  margin-bottom:10rpx
}
.qrcode{
  padding:10px;
  border-radius: 30rpx;
  height: 400rpx;
  overflow: hidden;
  box-sizing: border-box;
  overflow: hidden;
}
.qrcode image{
  width: 100%;
  height: 400rpx;
}