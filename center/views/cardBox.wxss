.check{
  width: 100%;
  text-align: right;
  font-size: 25rpx;
  color:#666;
  padding-top:40rpx
}

.card-box{
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.box-item{
  width: 32%;
  height: 280rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  margin-top:10rpx;
  padding:8rpx 15rpx;
  box-sizing: border-box;
  background:white;
  text-align: left;
  font-size: 20rpx;
  font-weight: bolder;
}
.box-item image{
  width: 100%;
  height: 180rpx;
}
.box-item>view:nth-child(1){
  overflow: hidden;
  width: 100%;
  height: 180rpx;
  text-align: center;
}
.box-item>view:nth-child(2){
  margin-top:20rpx
}
.box-item>view:nth-child(3){
  color:#f29600
}
