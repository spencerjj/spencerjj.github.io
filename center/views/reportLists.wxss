.actItem{
  width: 100%;
  height: 380rpx;
  margin-top:35rpx;
  background:#fff;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
}

.actItem>view:first-child{
  width: 40%;
  height: 300rpx;
  margin-top:40rpx;
  margin-left:30rpx;
  overflow: hidden;
  float: left;
}
.actItem>view:first-child image{
  width: 100%;
  height: 300rpx;
}
.aright{
  float: right;
  width: 40%;
  margin-top:60rpx
}
.aright>view{
  float:right;
  margin-right: 20rpx;
}
.aright>view:nth-child(1){
  font-weight: bolder;
  max-height: 90rpx;
  text-align: right;
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 1;
-webkit-box-orient: vertical;

}
.aright>view:nth-child(2){
  display: inline-flex;
  align-items: center;
  color:#9e9e9f;
  font-size: 20rpx;
  font-weight: bolder;
  margin-top:10rpx
}
.aright>view:nth-child(3){
  font-size: 18rpx;
  color:#dd5518;
  background:#fadfb9;
  padding:5rpx 10rpx 5rpx 10rpx;
  width: 100rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top:15rpx
}
.people{
  clear: both;
  display: flex;
  float: right;
  align-items: center;
  font-size: 20rpx;
  margin-top:20rpx;
}
.people image{
  width: 70rpx;
  height: 50rpx;
}
.join{
  color:white;
  font-weight: bolder;
  background-image: linear-gradient(to right,#f7c9ab,#c9a07e);
  padding:5rpx 20rpx 5rpx 20rpx;
  width: 100rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  text-align: center;
  position: absolute;
  bottom:50rpx;
  right: 0;
}
.know{
  color:#9e9e9f;
  font-weight: bolder;
  padding:5rpx 20rpx 5rpx 20rpx;
  border:1rpx solid #9e9e9f;
  width: 100rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  text-align: center;
  position: absolute;
  bottom:50rpx;
  right: 150rpx;
}
.hover1{
  background:#eee
}