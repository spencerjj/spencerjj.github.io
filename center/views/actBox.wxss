.check{
  width: 100%;
  text-align: right;
  font-size: 25rpx;
  color:#666;
  padding-top:40rpx
}
.act-box{
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.act-box>view{
  width: 48%;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  background:white
}
.act-box>view:nth-child(4n+1){
  height: 400rpx;
  margin-top:20rpx
}
.act-box>view:nth-child(4n+1) image{
  width: 100%;
  height: 400rpx;
}
.act-box>view:nth-child(4n+2){
  height: 300rpx;
  margin-top:20rpx
}
.act-box>view:nth-child(4n+2) image{
  width: 100%;
  height: 300rpx;
}
.act-box>view:nth-child(4n+3){
  height: 300rpx;
  margin-top: 20rpx;
}
.act-box>view:nth-child(4n+3) image{
  width: 100%;
  height: 300rpx;
}
.act-box>view:nth-child(4n+4){
  height: 400rpx;
  margin-top: -80rpx;
}
.act-box>view:nth-child(4n+4) image{
  width: 100%;
  height: 400rpx;
}
.boxItem image{
  position: absolute;
  top:0;
  left: 0;
}
.boxTitle{
  position: absolute;
  bottom:80rpx;
  color:white;
  left:30rpx;
  font-size: 23rpx;
  background:#000;
  font-weight: bolder;
  padding:5rpx 30rpx;
}
.boxTitle::before{
  content: '';
  width: 10rpx;
  height: 10rpx;
  position: absolute;
  top:16rpx;
  left: 10rpx;
  background:red;
  border-radius: 50%;
}
.boxTime{
  display: flex;
  align-items: center;
  position: absolute;
  bottom:30rpx;
  left:50rpx;
  color:white;
  font-size: 18rpx;
  background:#000;
  padding:5rpx 20rpx
}