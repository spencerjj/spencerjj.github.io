/* pages/my/account/addAccount.wxss */
page{
  padding-bottom:200rpx;
  background:white;
}
.title{
  margin-top:30rpx;
  font-size: 35rpx;
  color:#7d7d7d;
  width: 90%;
  margin-left: 5%;
  font-family: Georgia, 'Times New Roman', Times, serif;
}

.content{
  width: 94%;
  margin-left: 3%;
}
.top{
  height: 380rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding:0 10%;
  box-sizing: border-box;
}
.top>view{
  text-align: center;
  width: 40%;
}
.topItem>view:first-child{
  position: relative;
}
.select{
  position: absolute;
  border:3rpx solid #f2f3f4;
  right: 13rpx;
  top:165rpx;
  border-radius: 50%;
  color:#999
}
.icon{
  width: 250rpx;
  height: 250rpx;
}
.topItem>view:nth-child(2){
  font-weight: 500;
  font-size: 26rpx;
}
.topItem>view:nth-child(3){
  color:#999;
  font-size: 16rpx;
}
.title1{
  font-size: 28rpx;
  color:#bfbfbf;
  height: 60rpx;
  line-height: 60rpx;
  margin-left:30rpx
}
.info{
  box-sizing: border-box;
  padding: 50rpx 30rpx 100rpx 30rpx;
  box-shadow:  10rpx 10rpx 10rpx 4rpx #ddd;
  width: 96%;
  margin-left: 2%;
  margin-top:20rpx;
  border-radius: 10rpx;
}
.section{
  width: 94%;
  margin-left: 3%;
  margin-top:30rpx;
}
.s1{
  width: 100%;
  height:50rpx;
  line-height: 50rpx;
  text-align: left;
  font-size: 28rpx;
  color:#777;
  padding-left:10rpx;
  font-family: Georgia, 'Times New Roman', Times, serif;
  margin-bottom: 10rpx;
}
.fill1{
  width: 100%;
  height:80rpx;
  text-align: left;
  color:#000;
  font-size: 30rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  box-shadow:  0 0rpx 10rpx 5rpx #ccc inset;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.action{
  text-align: center;
  width: 80%;
  margin-left:10%;
  height: 70rpx;
  font-size: 30rpx;
  color:white;
  line-height: 70rpx;
  border-radius: 10rpx;
  background: #ccc;
  margin-top:100rpx;
}
.save{
  background: #dcdcdc !important;
}

.hide{
  display: none
}
.notice{
  height: 100rpx;
  font-size: 24rpx ;
  margin-left: 3%;
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  color:#bbb
}
.btn{
  width: 100%;
  margin-top:-30px;
  font-size: 35rpx;
  height: 320rpx;
  line-height: 300rpx;
  text-align: center;
  font-family: Georgia, 'Times New Roman', Times, serif;
  background: url(http://tiebapic.baidu.com/forum/w%3D580/sign=cd416f3050ce36d3a20483380af13a24/662a43a7d933c89547b70b91941373f083020019.jpg);
  background-size: 100% 100%;
}
.disable{
  color:#999
}
