page{
  padding-bottom:200rpx;
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif
}
.banner{
  width:100%;
  overflow: hidden;
  background:#000
}
.banner image{
  width: 100%;
}
.middle{
  width: 100%;
  height: 500rpx;
  position: relative;
  margin-bottom:60rpx
}
.center{
  height: 530rpx;
  width: 100%;
  position: absolute;
  top:-10rpx;
  background:white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 10rpx #eee;
  overflow: hidden;
  padding:0 10rpx;
  box-sizing: border-box;
}

.cbottom{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.cbottom>view{
  text-align: center;
  color:#7d7d7d;
  font-size: 28rpx;
  position: relative;
  width: 21%;
  margin-top: 60rpx;
}
.cbottom .img{
  width: 120rpx;
  height: 120rpx;
  margin:0 auto;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:  0 0rpx 40rpx 10rpx #eee inset,10rpx 10rpx 30rpx 5rpx #ddd;
}
.cbottom>view image{
  width: 64rpx;
  height: 64rpx;
}
.cbottom>view:nth-child(3) image{
  width: 80rpx;
  height: 80rpx;
}
.scr{
  width: 100%;
}
.scrtop{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left:10%;
}
.scrleft{
  width: 50%;
  color:#2e2d30
}
.scrleft>view:first-child{
  font-size: 40rpx;
}
.scrleft>view:nth-child(2){
  font-size: 25rpx;
}
.scrright{
  margin-right: 10%;
}
.scrright image{
  width: 30rpx;
  height: 30rpx;
}
.scrright .img{
  width: 50rpx;
  height: 50rpx;
  margin:0 auto;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:  0 0rpx 40rpx 10rpx #eee inset,10rpx 10rpx 30rpx 5rpx #ddd;
}
.scrbtm{
  margin-top:30rpx;
}
