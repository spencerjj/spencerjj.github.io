page{
  background: #f8f8f8;
  padding-bottom: 100rpx;
}
.top{
  width: 84%;
  height: 450rpx;
  margin-left: 8%;
  border-radius: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  background:#f2f2f2;
  text-align: center;
  box-shadow: 15rpx 15rpx 15rpx 0rpx #ddd;
}
.top image{
  width: 90%;
  height: 390rpx;
  margin-top:30rpx;
  border-radius: 30rpx;
}
.info{
  width: 84%;
  margin-left: 8%;
  margin-top: 50rpx;
  font-size: 28rpx;
}
.info>view:first-child{
  font-size: 45rpx;
}
.info>view:nth-child(2){
  margin-top:20rpx
}
.detail{
  width: 84%;
  margin-left: 8%;
  margin-top: 50rpx;
  font-size: 28rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 30rpx;
}
.detail>view:first-child{
  font-size: 35rpx;
  text-align: center;
  margin-top:30rpx
}
.detail>view:nth-child(2){
  margin-top:20rpx
}
.conf{
  position: fixed;
  bottom:100rpx;
  left:50%;
  margin-left: -165rpx;
	width: 330rpx;
	height: 100rpx;
	font-weight: 500;
	font-size: 24rpx;
	box-sizing: border-box;
	text-align: center;
	background: white;
	padding: 18rpx 10rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
	font-size: 28rpx;
	letter-spacing: 10rpx;
	background-image: linear-gradient(to right,#c59d62,#c59d6280,#c59d62);
	box-shadow: 15rpx 15rpx 15rpx 0rpx #ddd;
}

