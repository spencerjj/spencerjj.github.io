/* pages/my/account/addAccount.wxss */
page {
  background: #F7F7F7;
  position: relative
}

.title1 {
  font-size: 28rpx;
  color: #bfbfbf;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 30rpx
}

.content {
  background: white;
  border-bottom: 1rpx solid rgb(202, 201, 201);
}

.section {
  width: 96%;
  margin-left: 4%;
  border-bottom: 1rpx solid rgb(202, 201, 201);
  height: 100rpx;
  position: relative;
  line-height: 100rpx;
}

.section:last-child {
  border-bottom: none;
}

.save {
  margin-top: 30px;
  text-align: center;
  width: 80%;
  margin-left: 8%;
  background: #69bcf9;
  height: 80rpx;
  font-size: 30rpx;
  color: white;
  line-height: 80rpx;
  border-radius: 10rpx;

}

.delete {
  position: fixed;
  bottom: 40rpx;
  text-align: center;
  width: 40%;
  margin-left: 52%;
  background: none;
  height: 70rpx;
  font-size: 30rpx;
  color: black;
  line-height: 70rpx;
  border-radius: 10rpx;
  border: 2rpx solid #666
}

.pic {
  float: left;
  width: 100rpx;
  height: 100rpx;
  background: #eee;
  border-radius: 50%;
  color: #bfbfbf;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1rpx solid #69bcf9;
  margin-top: 25rpx;
  margin-left: 20rpx;
  overflow: hidden
}

.pic image {
  width: 100%;
  height: 100%
}

.action {
  float: left;
  line-height: 150rpx;
  font-size: 30rpx;
  color: #bfbfbf;
  margin-left: 125rpx
}

.s1 {
  width: 120rpx;
  height: 50rpx;
  float: left;
  font-size: 35rpx;
  font-weight: bolder;
}

.arraw {
  width: 30rpx;
  height: 30rpx;
  top: 50%;
  margin-top: -15rpx;
  right: 30rpx;
  position: absolute
}

.fill {
  float: left;
  margin-left: 40rpx;
  text-align: left;
  color: #69bcf9;
  font-size: 35rpx;
  font-weight: bolder;
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 100rpx;
  height: 100rpx;
}

.picker {
  float: left;
  margin-left: 80rpx;
  text-align: left;
  color: #bfbfbf;
  font-size: 30rpx;
  margin-top: 25rpx;
  min-width: 60%
}

.store {
  float: left;
  margin-left: 80rpx;
  text-align: right;
  color: #bfbfbf;
  font-size: 30rpx;
  margin-top: 25rpx;
  max-width: 60%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}

.selectShop {
  width: 40%;
  min-height: 200rpx;
  margin-left: 25%;
  border: 4rpx solid #eee;
  border-radius: 15rpx;
  padding: 30rpx;
  padding-top: 0;
  position: absolute;
  top: 40%;
  z-index: 999;
  background: #ccc;
  color: white
}

.selectShop text {
  display: inline-block;
  width: 70%;
  vertical-align: middle;
  padding-left: 20rpx;
}

.selectShop checkbox {
  margin-top: 30rpx;
}

.shadow {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: black;
  opacity: 0.5;
  z-index: 998
}

.hide {
  display: none
}

.disabled {
  opacity: 0.5
}

.count {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: white;
  background: red;
  text-align: center;
  font-size: 25rpx;
  font-weight: bolder;
  top: 50%;
  right: 70rpx;
  border-radius: 50%;
  margin-top: -20rpx;
}

.getPhone {
  font-size: 25rpx;
  color: #5cadff;
  float: right;
  font-weight: bolder;
  border: 2rpx solid #5cadff;
  height: 60rpx;
  line-height: 60rpx;
  /* margin-top: 18rpx; */
  padding: 0rpx 5rpx 0rpx 5rpx;
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}

.family {
  width: 100%;
}

.ftitle {
  width: 100%;
  text-align: center;
  font-size: 35rpx;
  font-weight: bolder;
  height: 100rpx;
  line-height: 100rpx;
}

.list-item {
  width: 80%;
  height: 130rpx;
  display: flex;
  align-items: center;
  background: #eee;
  margin-left: 10%;
  border-radius: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx 1rpx #bbb;
}

.list-item .info-box {
  position: relative;
  width: 100%;
  height: 120rpx;
  /* border: 1px #000 solid;  */
  padding: 30rpx 6rpx 10rpx 40rpx;
}

.list-item .info-box .name {
  font-size: 35rpx;
  font-weight: bolder;
  float: left;
  max-width: 165rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}

.list-item .info-box .title {
  font-size: 25rpx;
  margin-top: 8rpx;
  margin-left: 20rpx;
  color: white;
  padding: 0 10rpx 0 10rpx;
  border-radius: 25rpx;
  text-align: center;
  float: left;
}

.list-item .tip {
  font-size: 25rpx;
  margin-top: 3rpx;
  margin-left: 20rpx;
  color: #1790FF;
  border: 1rpx solid #1790FF;
  width: 100rpx;
  border-radius: 25rpx;
  text-align: center;
  float: left;
}

.title1 {
  background: #1790FF;
}

.title2 {
  background: #FF9900
}

.list-item .info-box .line2 {
  clear: both;
}

.list-item .info-box .tag {
  margin-right: 16rpx;
}

.shop {
  font-size: 35rpx;
  font-weight: bolder;
  color: #1790FF;
  float: left;
  width: 70%;
}

.arraw1 {
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  margin-top: -25rpx;
  right: 30rpx;
  position: absolute
}

.action {
  width: 80%;
  margin-left: 10%;
  display: flex;
  justify-content: space-between;
}

.action view {
  text-align: center;
  width: 45%;
  height: 70rpx;
  font-size: 30rpx;
  color: white;
  line-height: 70rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-top: 50rpx
}

.action view:first-child {
  background: #000;
  opacity: .5;
}

.action view:nth-child(2) {
  background: #096DD9;
  opacity: .7;
}
.hover1{
  opacity: .2;
}