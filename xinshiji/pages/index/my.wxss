/* pages/index/my.wxss */
page{
  padding-bottom: 300rpx;
}
.top {
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  position: relative;
}

.banner {
  width: 100%;
  height: 100%;
}

.center {
  width: 90%;
  margin-left: 5%;
  height: 400rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 60rpx;
  background-size: 100% 100%;
  box-shadow: 5rpx 5rpx 20rpx 10rpx #aaa;
}

.ctop {
  width: 100%;
  height: 280rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 65rpx;
  margin-left: 30rpx;
  float: left;
}

.info {
  float: left;
  margin-top: 50rpx;
  font-size: 35rpx;
  margin-left: 15rpx;
  font-weight: bolder;
  position: relative;
}

.info>view:first-child {
  position: absolute;
  width: 300rpx;
  top: 20rpx
}

.info image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 65rpx
}

.progress {
  font-size: 20rpx;
  position: absolute;
  left: 0;
  top: 110rpx;
  width: 200rpx;
}

.pro {
  width: 200rpx;
  height: 10rpx;
  background: #C79F62;
  border-radius: 15rpx;
  position: relative;
  overflow: hidden;
}

.yin1 {
  background: #999 !important
}

.pro>view {
  position: absolute;
  left: 0;
  height: 15rpx;
  background: #efbf7f;
  border-radius: 15rpx;
}

.yin2 {
  background: #ddd !important
}

.up {
  display: inline-block;
  float: right;
  color: white;
  border-radius: 5rpx;
  padding: 0 5rpx;
  font-size: 18rpx
}

.code {
  float: right;
  text-align: center;
  font-size: 25rpx;
  margin-right: 30rpx;
  margin-top: 90rpx
}

.code image {
  width: 60rpx;
  height: 60rpx;
}

.cbottom {
  clear: both;
  margin-left: 8%;
  font-size: 23rpx;
  font-weight: 500;
}

.cbottom>view>text {
  font-size: 35rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: normal;
  letter-spacing: 2rpx;
}

.cbottom text {
  font-weight: 500;
}

.middle{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 90%;
  margin-left: 5%;
  border-radius: 30rpx;
  background:white;
  padding:30rpx 0;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 20rpx 10rpx #ddd;
}
.middle>view{
  text-align: center;
  color:#7d7d7d;
  font-size: 28rpx;
  position: relative;
  width: 21%;
}
.middle .img{
  width: 100rpx;
  height: 100rpx;
  margin:0 auto;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:  0 0rpx 40rpx 10rpx #eee inset,10rpx 10rpx 30rpx 5rpx #ddd;
}
.middle>view image{
  width: 70rpx;
  height: 70rpx;
}
.middle>view:nth-child(3) image{
  width: 75rpx;
  height: 75rpx;
}

.mark {
  position: absolute;
  top: 25rpx;
  right: 10rpx;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  color: white;
  font-size: 20rpx;
  border-radius: 50%;
  background: red
}

.middle image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.lists {
  margin-top: 50rpx;
  padding-bottom: 100rpx;
  border-radius: 30rpx;
  padding:0 30rpx 30rpx 20rpx;
  background:white;
  box-sizing: border-box;
  width: 90%;
  margin-left: 5%;
  box-shadow: 5rpx 5rpx 20rpx 10rpx #ddd;
}

.hover1 {
  background: #eee
}

.showCode {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, .9);
  padding-top: 200rpx;
  z-index: 99;
  transform: scale(0);
  transition: all .3s
}

.show {
  opacity: 1;
  transform: scale(1);
}

.qrcode {
  position: absolute;
  top: 45%;
  left: 50%;
  margin-left: -135px;
  margin-top: -200px;
  padding: 10px;
  padding-bottom: 10px;
  background: white;
  border-radius: 30rpx;
  box-shadow: 1px -1px 10px 1px #aaa;
}

.canvas {
  width: 255px;
  height: 250px;
  margin: 0 auto
}

.login {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  margin-top: 100rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}

.login button {
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  border: none !important;
  background: #999;
  color: #fff;
  margin-top: 10rpx;
  font-size: 32rpx;
}

button::after {
  border: none;
}

.listItem {
  position: relative;
  width: 94%;
  height: 110rpx;
  line-height: 110rpx;
  margin-left: 3%;
  background: white;
  color: #666;
  border-bottom: 2rpx solid #ddd;
  font-size: 28rpx;
  text-align: left;
  padding-left: 0;
}

.logo {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-top: -5rpx;
  margin-left: 50rpx;
  margin-right: 20rpx;
}

.arraw {
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  margin-top: -20rpx;
  right: 30rpx;
  position: absolute;
  transform: rotate(-90deg);
}