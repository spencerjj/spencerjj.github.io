page{
  background: #fff;
}
.banner{
  position: relative;
  color:#000;
  width: 100%;
}
.tier{
  position: absolute;
  left: 310rpx;
  top:120rpx;
  font-weight: 500;
  font-size: 36rpx;
  font-family: Georgia, 'Times New Roman', Times, serif;
}
.point{
  position: absolute;
  bottom:80rpx;
  left:100rpx;
  font-family: Georgia, 'Times New Roman', Times, serif;
}
.point text{
  font-family:Arial, Helvetica, sans-serif;
  font-size: 38rpx;
  font-weight: 500;
}
.banner image{
  width: 90%;
  margin-left:5%;
  border-radius: 40rpx;
  overflow: hidden;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  box-shadow:10rpx 15rpx 15rpx 5rpx #ddd;
}
.middle{
  padding:40rpx 15rpx 15rpx 15rpx;
  box-sizing: border-box;
  background:white;
  width: 90%;
  border-radius: 15rpx;
  background:#f8f8f8;
  box-shadow: 10rpx 15rpx 15rpx 5rpx #ddd;
  margin:30rpx auto
}
.top{
  display: flex;
  justify-content: space-between;
}
.title{
  height: 60rpx;
  font-size: 32rpx;
  font-weight: bolder;
}
.confirm{
    width: 100%;
    margin-top:-30px;
    font-size: 35rpx;
    height: 320rpx;
    line-height: 300rpx;
    background: url(http://tiebapic.baidu.com/forum/w%3D580/sign=cd416f3050ce36d3a20483380af13a24/662a43a7d933c89547b70b91941373f083020019.jpg);
    background-size: 100% 100%;
}
.bottom{
  width: 90%;
  margin-left:5%;
  margin-top:40rpx;
  color:#9e9e9f;
  font-size: 20rpx;
  border-top:2rpx solid #ddd;
  padding-left:30rpx;
  box-sizing: border-box;
}
.bottom view:first-child{
  font-size: 30rpx;
  font-weight: bolder;
  color:#7d7d7d;
  height: 50rpx;
}
.bottom view{
  margin-top:20rpx
}
.history{
  display: flex;
  align-items: center;
  min-height: 80rpx;
  flex-wrap: wrap;
  margin-top:30rpx
}
.history .hisItem{
  color:#c0c0c0;
  font-size: 22rpx;
  margin-right: 10rpx;
  border:1px solid #c0c0c0;
  padding:5rpx 10rpx;
  border-radius: 22rpx;
}
.history .delete{
  width:40rpx;
  height: 40rpx;
  border:1px solid #c0c0c0;
  text-align: center;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add{
  width:160rpx;
  height: 40rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#5a81ec;
  font-size: 22rpx;
}