/* pages/index/activity.wxss */
.container{
  position: relative;
  padding-bottom: 100rpx;
}
.top{
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin-left: 10%;
  height: 80rpx;
  margin-top:10rpx
}
.top>view:first-child{
  line-height: 80rpx;
  width: 100rpx;
  border-bottom: 2rpx solid #dfb781;
}
.top>view:nth-child(2){
  display: flex;
  align-items: center;
}
.top image{
  width: 100rpx;
  height: 37rpx;
  align-items: center;
  margin-right: 20rpx;
}
.middle{
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
}
.middle image{
  width: 100%;
  height: 300rpx;
  border-radius: 50rpx;
  box-shadow: 0 0 20rpx 0rpx #ddd;
}
.card{
  width: 90%;
  margin-left:5%;
  padding-bottom: 100rpx;
  box-shadow: 0 0 20rpx 0rpx #ddd;
  border-radius: 20rpx;
  margin-top:50rpx
}
.title{
  height: 80rpx;
  line-height: 120rpx;
  color:#777;
  width: 90%;
  margin-left:5%;
}
.mark{
  position: fixed;
  width: 1rpx;
  border-left:1rpx solid #a7a6a6;
  left: 0;
  right: 0;
  height: 60rpx;
  top:15rpx;
  margin:0 auto;
  z-index: 9;
}
.showCode{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.5);
  z-index: 99;
  transform: scale(0);
  transition:all .3s
}
.show{
  opacity: 1;
  transform: scale(1);
}
.codeCon{
  text-align: center;
  width: 90%;
  margin-left: 5%;
  position: absolute;
  top:10vh;
  background:white;
  padding:50rpx 0;
  border-radius: 30rpx;
}
.rule{
  width: 80%;
  font-size: 22rpx;
  color:#999;
  margin:0 auto
}
.rtitle{
  color:#c79f62;
  font-weight: bolder;
  font-size: 40rpx;
}
.tnotice{
  font-size: 40rpx;
  color:#333;
  font-weight: bolder;
  letter-spacing:3rpx
}
.rtitle1{
  font-size: 28rpx;
  margin-top:30rpx;
  font-weight: bolder;
  color:#999;
  font-size: 35rpx;
}
.qrcode{
  border-radius: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.canvas{
  width: 230px;
  height: 230px;
  margin:0 auto
}
.desc{
  width: 80%;
  margin-left: 10%;
}

