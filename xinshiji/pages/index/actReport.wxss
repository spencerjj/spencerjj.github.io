/* pages/index/activity.wxss */
.container{
  position: relative;
}
.info{
  width: 90%;
  margin-left: 5%;
  min-height: 1000rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 15rpx 15rpx 15rpx 0rpx #ccc;
  margin-bottom:20rpx;
  margin-top:40rpx
}
.section{
  width: 90%;
  margin-left: 5%;
  margin-top:30rpx;
}
.s1{
  width: 100%;
  height:50rpx;
  line-height: 50rpx;
  text-align: left;
  font-size: 28rpx;
  color:#777;
  padding-left:10rpx;
  font-family: Georgia, 'Times New Roman', Times, serif;
  margin-bottom: 10rpx;
}
.fill1{
  width: 100%;
  height:80rpx;
  text-align: left;
  color:#000;
  font-size: 30rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  box-shadow:  0 0rpx 10rpx 5rpx #ccc inset;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.title{
  font-size: 45rpx;
  text-align: center;
  padding-top:40rpx
}
.card{
  padding-bottom: 100rpx;
}
.mark{
  position: absolute;
  width: 1rpx;
  border-left:1rpx solid #a7a6a6;
  left: 0;
  right: 0;
  height: 60rpx;
  top:15rpx;
  margin:0 auto;
  z-index: 9;
}
.van-tabs__nav{
  background:#f2f3f4
}
.dateLists{
  height: 80%;
	margin: 24rpx auto;
	margin-bottom: 0;
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	grid-gap: 2%;
	gap: 2%;
	grid-auto-flow: row;
}
.button {
	font-weight: 500;
	font-size: 24rpx;
	box-sizing: border-box;
  height: 70rpx;
  line-height: 70rpx;
	text-align: center;
	margin-left: 6rpx;
	background: white;
	border-radius: 40rpx;
	font-size: 28rpx;
	background-image: linear-gradient(to right,#eee,#fff,#ddd);
	box-shadow: 10rpx 10rpx 15rpx 5rpx #ddd
}
.yellow{
	background-image: linear-gradient(to right,#c59d62,#c59d6280,#c59d62);
}
.conf{
  margin:100rpx auto;
	width: 330rpx;
	height: 100rpx;
	font-weight: 500;
	font-size: 24rpx;
	box-sizing: border-box;
	text-align: center;
	background: white;
	padding: 18rpx 10rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
	font-size: 28rpx;
	letter-spacing: 10rpx;
	background-image: linear-gradient(to right,#c59d62,#c59d6280,#c59d62);
	box-shadow: 15rpx 15rpx 15rpx 0rpx #ddd;
}