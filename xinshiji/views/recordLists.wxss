.actItem{
  width: 94%;
  height: 350rpx;
  margin-top:35rpx;
  margin-left:3%;
  border-radius: 10rpx;
  background:#fff;
  position: relative;
  box-shadow: 15rpx 15rpx 15rpx 0rpx #ccc;
}

.actItem>view:first-child{
  width: 40%;
  height: 260rpx;
  margin-top:45rpx;
  margin-left:30rpx;
  overflow: hidden;
  float: left;
  background:#f1f1f1;
  border-radius: 20rpx;
  box-shadow: 15rpx 15rpx 15rpx 0rpx #ddd;
}
.actItem>view:first-child image{
  width: 88%;
  margin-left:6%;
  height: 220rpx;
  margin-top:20rpx;
  border-radius: 20rpx;
}
.aright{
  float: right;
  width: 50%;
  margin-top:45rpx
}
.aright>view{
  float:right;
  margin-right: 20rpx;
}
.aright>view:nth-child(1){
  color:#7d7d7d;
  font-weight: bolder;
  max-height: 90rpx;
  text-align: right;
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;

}
.aright>view:nth-child(2){
  display: inline-flex;
  align-items: center;
  color:#7d7d7d;
  font-size: 20rpx;
  font-weight: bolder;
  margin-top:10rpx;
  clear: both;
}
.aright>view:nth-child(3){
  clear: both;
  font-size: 20rpx;
  color:#dd5518;
  background:#fadfb9;
  padding:5rpx 10rpx 5rpx 10rpx;
  width: 100rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top:10rpx
}
.aright>view:nth-child(4){
  display: inline-flex;
  align-items: center;
  color:white;
  font-weight: bolder;
  background-image: linear-gradient(to right, #fdd59e , #c0ac8e);
  padding:5rpx 10rpx 5rpx 30rpx;
  width: 120rpx;
  font-size: 23rpx;
  border-radius: 30rpx;
  text-align: center;
  position: absolute;
  bottom:35rpx;
  right: 0;
}
.end{
  background:rgb(175, 175, 175) !important;
  color:#000 !important
}