.actItem{
  width: 100%;
  height: 350rpx;
  margin-top:35rpx;
  background:#fff;
  position: relative;
  border-radius: 15rpx;
}

.actItem>view:first-child{
  width: 45%;
  height: 280rpx;
  margin-top:40rpx;
  margin-left:30rpx;
  overflow: hidden;
  float: left;
}
.actItem>view:first-child image{
  width: 100%;
  height: 100%;
}
.aright{
  float: right;
  width: 50%;
  margin-top:60rpx
}
.aright>view{
  float:right;
  margin-right: 20rpx;
}
.aright text{
  font-weight: bolder;
  display: block;
  width:94%;
  height: 90rpx;
  text-align: right;
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;

}
.aright .location{
  display: inline-flex;
  align-items: center;
  color:#9e9e9f;
  font-size: 20rpx;
  font-weight: bolder;
  margin-top:10rpx
}
.aright .state{
  clear: both;
  font-size: 20rpx;
  color:#dd5518;
  background:#fadfb9;
  padding:5rpx 10rpx 5rpx 10rpx;
  width: 100rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top:20rpx
}
.aright .more{
  color:white;
  font-weight: bolder;
  background-image: linear-gradient(to right,#f7c9ab,#c9a07e);
  padding:5rpx 20rpx 5rpx 20rpx;
  width: 120rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  text-align: center;
  position: absolute;
  bottom:40rpx;
  right: 0;
}