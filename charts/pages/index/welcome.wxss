.loading {
  width: 100%;
  height: 100%;
  display: block;
  background: rgba(0,0,0,.9);
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
}
.loading image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 5rpx;
  position: absolute;
  left: 50%;
  top: 33%;
  margin: 0 0 0 -100rpx;
}
.progress{
  position: absolute;
  top:45%;
  width: 90%;
  left:5%;
}
.text{
  position: absolute;
  width: 100%;
  top:10%;
  text-align: center;
  font-weight: bolder;
  font-size: 50rpx;
  color:white
}