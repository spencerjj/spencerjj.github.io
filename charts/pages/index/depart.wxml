<view class="container">
  <view class="select" bindtap="toSelect" hover-stay-time=".5s" hover-class="selectHover">
		<image src="/images/change.png"></image>
  </view>
  <!-- <van-dropdown-menu>
    <van-dropdown-item value="{{ value }}" options="{{ options }}" bind:change="onSwitchChange"/>
  </van-dropdown-menu> -->
  <van-tabs active="{{active}}" color="#28aad2" title-active-color="#28aad2" bind:change="onChange">
    <van-tab title="业务总览" name="all"></van-tab>
    <van-tab title="购物中心" name="gou"></van-tab>
    <van-tab title="新世纪" name="xin"></van-tab>
    <van-tab title="百货大楼" name="bai"></van-tab>
  </van-tabs>
  <view class="first" wx:if="{{active=='all'}}">
    <van-transition show="{{showList[index]}}" name="{{index % 2 == 0?'fade-left':'fade-right'}}" wx:for="{{totalLists}}">
      <view class="comItem">
        <view class="fleft">
          <view class="fIcon">
            <image src="/images/center.png" wx:if="{{index==0}}"></image>
            <image src="/images/gouwu.png" wx:elif="{{index==1}}"></image>
            <image src="/images/shop.png" wx:elif="{{index==2}}"></image>
            <image src="/images/dalou.png" wx:elif="{{index==3}}"></image>
            <image src="/images/huiyuan.png" wx:elif="{{index==4}}"></image>
          </view>
        </view>
        <view class="fright">
          <view class="intime">
            <view class="comTitle">
              {{item.name}}
            </view>
            <view class="sales">
              {{item.sales}} <text style="font-size:20rpx">万</text>
              <view>实时销售</view>
            </view>
          </view>
          <view class="saleTop sale1">
            <view class="saleSection">
              <view>{{item.month}} <text style="font-size:20rpx">万</text></view>
              <view>本月<text class="down" style="font-size:20rpx">　-13.88%</text></view>
            </view>
            <view class="saleSection">
              <view>{{item.year}} <text style="font-size:20rpx">万</text></view>
              <view>本年<text class="rise" style="font-size:20rpx">　+22.88%</text></view>
            </view>
          </view>
        </view>
      </view>
    </van-transition>

  </view>
  <view class="second" wx:else>
    <view class="top">
      <view class="topTitle">
        {{title}}销售面板
      </view>
      <view class="topDate">
        数据发生日期 - 2021年1月1日
        <image class="arraw" src="/images/arraw3.png"></image>
      </view>
    </view>
    <view class="middle">
      <view class="mtop">
        <view class="mtleft">
          <view class="mtnum">200169</view>
          <view class="mtitle">今日销售额</view>
        </view>
        <view class="mtright">
          <view class="mtnum">2165</view>
          <view class="mtitle">今日注册会员</view>
        </view>
      </view>
      <view class="allTop all1">
        <view class="allSection">
          <view>3212330</view>
          <view>当月累计<text class="down" style="font-size:20rpx">　-13.88%</text></view>
        </view>
        <view class="allSection">
          <view>6480000</view>
          <view>当月指标</view>
        </view>
        <view class="allSection">
          <view>73%</view>
          <view>月完成率</view>
        </view>
      </view>
      <view class="allTop all2">
        <view class="allSection">
          <view>5004587</view>
          <view>本年累计<text class="rise" style="font-size:20rpx">　+17.65%</text></view>
        </view>
        <view class="allSection">
          <view>80000000</view>
          <view>本年指标</view>
        </view>
        <view class="allSection">
          <view>13.55%</view>
          <view>年完成率</view>
        </view>
      </view>
    </view>
    <view class="ttitle">
      <view style="position:absolute;width:10rpx;height:40rpx;border-radius:10rpx;left:0;top:40rpx;background:#28aad2">
      </view> 部门销售排行
      <image src="/images/ai.png" style="width:40rpx;height:40rpx;position:absolute;left:300rpx;top:40rpx"></image>
    </view>
    <view class="table" bindtap="toPage">
      <view class="trh">
        <view class="th" style="width:20%">排名</view>
        <view class="th" style="width:60%">门店名称</view>
        <view class="th">销售金额</view>
        <view class="th">当月销售</view>
        <view class="th">当月指标</view>
      </view>
      <block>
        <view class="tr bg-w" hover-class="trhover" hover-stay-time="0.5">
          <view class="td" style="width:20%">1</view>
          <view class="td depart">名品部</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
        </view>
      </block>
      <block>
        <view class="tr bg-g" hover-class="trhover" hover-stay-time="0.5">
          <view class="td" style="width:20%">2</view>
          <view class="td depart">男性品类部</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
        </view>
      </block>
      <block>
        <view class="tr bg-w" hover-class="trhover" hover-stay-time="0.5">
          <view class="td" style="width:20%">3</view>
          <view class="td depart">女性品类部</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
        </view>
      </block>
      <block>
        <view class="tr bg-g" hover-class="trhover" hover-stay-time="0.5">
          <view class="td" style="width:20%">4</view>
          <view class="td depart">儿童部</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
        </view>
      </block>
      <block>
        <view class="tr bg-w" hover-class="trhover" hover-stay-time="0.5">
          <view class="td" style="width:20%">5</view>
          <view class="td depart">超市部</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
          <view class="td">123123</view>
        </view>
      </block>
    </view>
    <view style="height:10rpx;width100%;background:#fff;margin-top:30rpx"></view>
    <view class="ttitle">
    <view style="position:absolute;width:10rpx;height:40rpx;border-radius:10rpx;left:0;top:40rpx;background:#28aad2">
    </view> 逐月销售趋势
    <image src="/images/ai.png" style="width:40rpx;height:40rpx;position:absolute;left:300rpx;top:36rpx"></image>
  </view>
    <view class="trend">
    <canvas canvas-id="lineCanvas" class="canvas c2" bindtouchstart="touchHandler"></canvas>
  </view>
  </view>

  <view style="width:100%;height:100rpx"></view>
</view>