.container{
  overflow-x: hidden;
}
.topCon{
  border-bottom: 5rpx solid #666;
  padding-bottom: 50rpx;
  overflow:hidden;
  min-height: 800rpx;
  transition:0.5s linear;
  /* background: url('http://tiebapic.baidu.com/forum/w%3D580/sign=7d549ba76bd98d1076d40c39113eb807/501cb21bb051f819d5910e11cdb44aed2f73e7c7.jpg'); */
  background-size: 100%;
  background-position: top;
  overflow-x: hidden;
}
.topHide{
  height:0;
  padding-bottom: 0;
}
.title{
  color:white;
  font-weight: bolder;
  font-size: 28rpx;
}
.first{
  width: 100%;
  padding-left: 5%;
  height: 190rpx;
  padding-top: 20rpx;
}
.first .time{
  height: 105rpx;
  margin-top: 10rpx;
  display: flex;
  position: relative;
}
.first .time .date{
  font-size: 110rpx;
  font-weight: 900;
  color:#53e0f3;
  /* float: left; */
}
.first .time .fullDate{
  font-size: 23rpx;
  font-weight: bolder;
  color:#fff;
  margin-top: 40rpx;
  margin-left: 30rpx;
}
.hideBar{
  position: absolute;
  top:30rpx;right:30rpx;
  border:2rpx solid #46BDCD;
  font-size: 28rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 10rpx;
  color:#46BDCD;
}
.hideBar image{
  width: 30rpx;
  height: 20rpx;
  transition: linear .2s;
}
.showBar{
  position: fixed;
  top:30rpx;right:30rpx;
  border:2rpx solid #46BDCD;
  font-size: 28rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #46BDCD;
  color:#fff;
}
.actionImage{
  width: 30rpx;
  height: 20rpx;
  transition: linear .2s;
}
.upHide{
  transform:rotate(180deg);
}
