/* pages/index/group.wxss */
page{
  background-color: #f8f8f8;
  overflow-x: hidden;
}
.container{
  width: 100%;
  overflow-x: hidden;
}
.mtop{
  width: 94%;
  margin-left:3%;
  box-sizing: border-box;
  color:#fff;
  font-size: 50rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding:20rpx;
  margin-top:30rpx;
  background: #6987fb;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx 0rpx #6987fb; 
  position: relative;
}
.mtop>view{
  text-align: center;
  width: 30%;
}
.saleImg image{
  width: 80rpx;
  height: 80rpx;
  margin-top:5rpx;
  animation: huang 2s linear infinite;
}
@keyframes huang{
  0%{transform:rotate(0);transform-origin:top}
  25%{transform:rotate(30deg);transform-origin:top}
  50%{transform:rotate(0);transform-origin:top}
  75%{transform:rotate(-30deg);transform-origin:top}
  100%{transform:rotate(0);transform-origin:top}
}
.mtm{
  height: 60rpx;
  width: 4rpx;
  margin-top: 20rpx;
  background:white
}
.mtitle{
  font-size:30rpx;
  color:#fff
}
.mtnum{
  font-weight: bolder;
}
.mtleft{
  text-align: center;
}
.fresh{
  position: absolute;
  right: 10rpx;
  top: 65rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  z-index: 999;
  text-align: center;
}
.fresh image{
  width: 80%;
  height: 80%;
  opacity: .6;
}
.round{
  transition: linear 1s;
  transform: rotate(1080deg);
}
.top{
  width: 94%;
  margin:auto;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.top .left{
  width: 48%;
  height: 275rpx;
  border-radius: 20rpx;
  background:#5992e8;
  box-shadow: 0 0 10rpx 0 #5992e8;
}
.top .right{
  width: 48%;
  height: 275rpx;
  border-radius: 20rpx;
  background:#f0b470;
  box-shadow: 0 0 10rpx 0 #f0b470;
}
.ltop{
  margin-top: 30rpx;
}
.ltop,.lbottom{
  display: flex;
  color:white;
  justify-content: space-between;
}
.ltop view,.lbottom view{
  width: 48%;
  line-height: 55rpx;
}
.ltop view:first-child,.lbottom view:first-child{
  font-size: 25rpx;
  text-align: right;
}
.middle{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  color:#999;
  font-size: 30rpx;
  line-height: 100rpx;
  background:white
}
.middle text{
  font-size: 40rpx;
  color:#5992e8
}
.ttitle{
  width: 94%;
  margin-left:3%;
  height:120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  font-weight: bolder;
  padding-left: 40rpx;
  position: relative;
}
.table {
  width: 94%;
  margin:auto;
  box-shadow: 0 0 10rpx 0rpx #dfe7fa; 
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  min-height: 2rem;
  align-items: center;
  font-size: 30rpx;

 }
 .header{
   border-bottom: 5rpx solid #5992e8;
 }
 .td {
  width:40%;
  /* justify-content: center; */
  text-align: center;
  /* overflow: hidden;
  text-overflow:ellipsis; */
  white-space: wrap;
  height:auto;
  color:#666;
  overflow: hidden;
 }
 .bg-w{
  background: #fff;
 }
 .bg-g{
  background: #ebeff7;
 }
 .th {
  width: 40%;
  justify-content: center;
  color: #5992e8;
  display: flex;
  height: 2rem;
  align-items: center;
  font-size: 25rpx;
  font-weight: bolder;
  background:white
 }
 .trhover{
  background: #ddd;
}
.rise{
  color:red
}
.rise1{
  color:#e83838
}
.down{
  color:#4ecb74
}
.trend{
  width: 94%;
  margin:auto;
  height: 1000rpx;
  position: relative;
}
.canvas{
  width: 100%;
  height:600rpx
}
.allTop{
  width: 94%;
  margin:auto;
  display: flex;
  justify-content: center;
  color:#eee;
  border-radius: 20rpx;
  background:white;
