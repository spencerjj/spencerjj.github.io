  text-align: center;
}
.allTop1 .van-circle__text{
  color:#4ba8df !important;
  font-size:40rpx !important

}
.allTop2 .van-circle__text{
  color:#f0b470 !important;
  font-size:40rpx !important
}
.allTop2 .altv view:nth-child(1){
  font-size: 45rpx;
  font-weight: bolder;
  color:#f0b470
}
.allSection{
  text-align: center;
  height: 160rpx;
  width: 31%;
  background: #fff;
  border-top:6rpx solid #4ba8df;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 0 0 10rpx 0rpx #4ba8df;  
}
.allSection view{
