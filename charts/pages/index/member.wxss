page{
  background-color: #fff;
  font-family: Arial !important;
}
.topCon{
  border-bottom: 15rpx solid #eee;
  padding-bottom: 50rpx;
  overflow:hidden;
  height: 1000rpx;
  transition:0.5s linear;
  background-color: #f7f7f7f7;
}
.topHide{
  height:0;
  padding-bottom: 0;
}
.title{
  color:#888;
  font-weight: bolder;
  font-size: 28rpx;
}
.first{
  width: 100%;
