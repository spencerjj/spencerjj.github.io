  display: flex;
  position: relative;
}
.first .time .date{
  font-size: 110rpx;
  font-weight: 900;
  color:#46BDCD
}
.first .time .fullDate{
  font-size: 23rpx;
  font-weight: bolder;
  color:#888;
  position: absolute;
  bottom: 0;
  left: 300rpx;
}
.hideBar{
  position: absolute;
  top:30rpx;right:30rpx;
  border:2rpx solid #46BDCD;
  font-size: 28rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 10rpx;
  color:#46BDCD;
}
.hideBar image{
  width: 30rpx;
  height: 20rpx;
  transition: linear .2s;
}
.showBar{
  position: fixed;
  top:30rpx;right:30rpx;
  border:2rpx solid #46BDCD;
  font-size: 28rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #46BDCD;
  color:#fff;
}
.actionImage{
  width: 30rpx;
  height: 20rpx;
  transition: linear .2s;
}
.upHide{
  transform:rotate(180deg);
}
