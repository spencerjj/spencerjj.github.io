  height: 20rpx;
  transition: linear .2s;
}
.showBar{
  position: fixed;
  top:30rpx;right:30rpx;
  border:2rpx solid #46BDCD;
  font-size: 28rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #46BDCD;
  color:#fff;
}
