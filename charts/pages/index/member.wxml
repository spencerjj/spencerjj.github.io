<view class="container">
	<view class="{{!ifUp?'hideBar':'showBar'}} " bindtap="up">{{!ifUp?'收起':'展开'}}
		<image class="actionImage {{ifUp?'upHide':''}}" src="{{!ifUp?'/images/hideUp.png':'/images/downShow.png'}}"></image>
	</view>
	<view class="topCon {{ifUp?'topHide':''}}">
		<view class="first">
			<view class="title">数据发生年份：</view>
			<view class="time">
				<view class="date">
					10/29
				</view>
				<view class="fullDate">
					<view>2020年10月29日</view>
					<view>星期三</view>
				</view>
			</view>
		</view>
		<view class="fourth section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
			<view class="fourth1">
				<view class="title">
					会员人数
				</view>
				<view class="data">
					244602
				</view>
			</view>
		</view>
		<view class="third section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
			<view class="third1">
				<view class="title">
					2020招新人数
				</view>
				<view class="data">
					24642 <text style="font-size:30rpx">(新增1461)</text>
				</view>
			</view>
			<view class="third2">
				<view class="title">
					2019招新人数
				</view>
				<view class="data">
					23181
				</view>
			</view>
		</view>

		<view class="btm">
			<view class="sixth section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
				<view class="sixth1">
					<view class="title">
						招新转化率
					</view>
					<view class="data">
						63.12%
					</view>
				</view>
			</view>
			<view class="seventh section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
				<view class="seventh1">
					<view class="title">
						同年对比
					</view>
					<view class="data rise">
						-27.10%
					</view>
				</view>
			</view>
		</view>
		<view class="btm">
			<view class="sixth section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
				<view class="sixth1">
					<view class="title">
						招新复购率
					</view>
					<view class="data">
						36.02%
					</view>
				</view>
			</view>
			<view class="seventh section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
				<view class="seventh1">
					<view class="title">
						同年对比
					</view>
					<view class="data">
						0.52%
					</view>
				</view>
			</view>
		</view>
		<view class="btm">
			<view class="sixth section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
				<view class="sixth1">
					<view class="title">
						老会员回购率
					</view>
					<view class="data">
						23.47%
					</view>
				</view>
			</view>
			<view class="seventh section" bindtap="toPage" hover-class="hover1" hover-stay-time=".5s">
				<view class="seventh1">
					<view class="title">
						同年对比
					</view>
					<view class="data rise">
						-2.93%
					</view>
				</view>
			</view>
		</view>
	</view>
	<view class="incoming">
		<view class="chartsTitle">
			实收占比<text>　　全部</text>
		</view>
		<view class="chartsDetail">2020实收占比</view>
		<canvas canvas-id="pieCanvas2020" class="canvas" style="height:300px"></canvas>
		<view class="chartsDetail">2019实收占比</view>
		<canvas canvas-id="pieCanvas2019" class="canvas" style="height:300px"></canvas>
	</view>
	<view style="width:100%;height:15rpx;background:#eee;margin-bottom:30rpx"></view>
	<view class="saleRate">
		<view class="chartsTitle">
			区域会员销售<text>　　全部</text>
		</view>
		<view class="chartsDetail">销售占比</view>
		<view class="mark">单位：人数</view>
		<canvas canvas-id="areaCanvas" class="canvas" bindtouchstart="toPage" data-mark="area"></canvas>
		<view class="toDetail" bindtap="toDetail">点击查看详细数据</view>
	</view>
	<view style="width:100%;height:15rpx;background:#eee"></view>
	<view class="saleTrend">
		<view class="chartsTitle">
			两年会员销售趋势<text>　　全部</text>
		</view>
		<view class="trend2020">
			<view class="chartsDetail">2020销售趋势</view>
			<view class="mark">单位：人数</view>
			<canvas canvas-id="columnCanvas2020" class="canvas c1"></canvas>
					<canvas canvas-id="lineCanvas2020" disable-scroll="true" class="canvas c2" bindtouchstart="touchHandler2020"></canvas>
		</view>
		<view class="trend2019">
			<view class="chartsDetail">2019销售趋势</view>
			<view class="mark">单位：人数</view>
			<canvas canvas-id="columnCanvas2019" class="canvas c1"></canvas>
					<canvas canvas-id="lineCanvas2019" disable-scroll="true" class="canvas c2" bindtouchstart="touchHandler2019"></canvas>
		</view>
	</view>

</view>