/**index.wxss**/
page{
    background-color: #102757;
    font-family: Arial !important;
    overflow-x: hidden;
}
.container{
    width: 100%;
    overflow-x: hidden !important;
    position: relative;
}
.select{
    position: fixed;
    left: 10rpx;
    bottom: 10rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border:#53e0f3 1px solid;
    box-shadow: 0 0 15rpx 0 #53e0f3;
    background: rgb(16, 39, 87,.6);
    z-index: 999;
    text-align: center;
}
.select image{
    width: 80%;
    height: 80%;
    margin-top:10%
}
.selectHover{
    background: #53e0f3;
}
.title{
    color:#fff;
    font-weight: bolder;
    font-size: 28rpx;
}
.first{
    width: 95%;
    padding-left: 5%;
    height: 190rpx;
}
.first .time{
    height: 105rpx;
    margin-top: 10rpx;
    display: flex;
    position: relative;
}
.first .time .date{
    font-size: 110rpx;
    font-weight: 900;
    color:#53e0f3;
    float: left;
  }
  .first .time .fullDate{
    font-size: 23rpx;
    font-weight: bolder;
    color:#fff;
    margin-top: 40rpx;
    margin-left: 30rpx;
  }
.allData{
    width: 94%;
    margin-left: 3%;
    margin-bottom: 50rpx;
}
.allTop{
    display: flex;
    justify-content: center;
    color:#eee;
}
.allSection{
    flex: 1;
    text-align: center;
    height: 160rpx;
    width: 48%;
    background: rgb(11,32,52);
    border-top:6rpx solid #7BBEE6;
    position: relative;
}
.allSection view{
    margin-top: 10rpx;
    font-size:28rpx;
    color:#7BBEE6
}
.allSection view:nth-child(1){
    font-size: 50rpx;
    font-weight: bolder;
    margin-top: 30rpx;
}
.allSection:nth-child(2){
    margin-left: 4%;
}
.allMid{
    display: flex;
    justify-content: center;
}
.allLeft,.allRight{
    width: 48%;
    margin-top: 30rpx;
}
.allLeft{
    border: 6rpx dotted #E3D383;
}

.allRight{
    margin-left: 4%;
    border: 6rpx dotted #B37474;
}
.allLeft .allSection1{
    /* border-top:2rpx dotted #E3D383; */
    color:#E3D383
}
.allRight .allSection1{
    /* border-top:2rpx dotted #B37474; */
    color:#B37474
}
.allSection1{
    flex: 1;
    text-align: center;
    height: 160rpx;
    width: 100%;
    background: rgb(11,32,52);
    position: relative;
}
.allSection1:first-child{
    border-top:none
}
.allSection1 view{
    font-size:28rpx;
}
.allSection1 view:nth-child(1){
    font-size: 50rpx;
    font-weight: bolder;
    padding-top: 30rpx;
}
.allSection1 view:nth-child(2){
    margin-top: 20rpx;
}
.second{
    width: 100%;
    height: 630rpx;
    padding-top: 20rpx;
    /* background: url('http://report.princesky.com:8888/tubiao/top_bg2.jpg') no-repeat; */
    background-size: 100% 100%;
    margin-bottom: 50rpx;
}
.totalData{
    width: 94%;
    margin-left: 3%;
    height: 590rpx;
    background:rgba(195, 208, 241, 0.8);
    box-sizing: border-box;
    padding-top:40rpx;
    box-shadow: 0 0 5rpx 2rpx #eee;
}
.dataSection{
    display: flex;
    flex-direction: row;
    justify-content: center;
    height: 190rpx;
}
.dataSection>view{
    margin-left: 20rpx;
}
.dataSection>view:first-child{
    margin-left: 0rpx;
}
.dataSection view:first-child .dataTitle view{
    background: rgb(59, 212, 181,.6);
}
.dataSection view:nth-child(2) .dataTitle view{
    background: rgb(58, 161, 255,.6);
}
.dataSection view:nth-child(3) .dataTitle view{
    background: rgb(251, 199, 33,.6);
}
.dataTitle view{
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 80rpx;
}
.dataTitle image{
    width:40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.dataTitle text{
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 15rpx;
    float: right;
    color:#000;
    font-size:30rpx
}
.dataNum{
    font-size: 45rpx;
    font-weight: lighter;
    color:#000;
    text-align: center;
    box-sizing: border-box;
    padding-top: 10rpx;
    font-weight: bolder;
}
.third{
    margin-bottom: 50rpx;
    width: 90%;
    margin-left: 5%;
}
.chartsTitle{
    font-size: 40rpx;
    font-weight: 200;
    height: 50rpx;
    line-height: 50rpx;
    color:#fff
}
.chartsTitle text{
    font-size: 30rpx;
    color:#c7eff2;
    line-height: 50rpx;
}
.mark{
    font-size: 25rpx;
    font-weight: 200;
    height: 50rpx;
    line-height: 50rpx;
    color:white
}
.chartsDetail{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
    font-size: 35rpx;
    font-weight: 200;
    text-align: center;
    background: #c7eff2;
    margin-top:40rpx;
    margin-bottom:20rpx;
    font-weight: bolder;
    position: relative;
  }
  .check{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    position: absolute;
    top: 6rpx;
    right: 10rpx;
  }
.canvas{
    width: 100%;
}
.toDetail{
    float: right;
    margin-right: 20rpx;
    font-size: 25rpx;
    color:#999;
  }
  .picker{
    position: relative;
    width: 56%;
    height: 50rpx;
    line-height: 50rpx;
    font-weight: 200;
    font-size: 35rpx;
  }
  .picker text{
    font-size: 40rpx;
  }
  
  .arraw1{
    width: 30rpx;
    height: 35rpx;
    top:50%;
    margin-top: -17.5rpx;
    right: 15rpx;
    position: absolute
  }
  .rate{
      position: absolute;
      right: 5rpx;
      top:55rpx
  }
  .rise{
    color:red
  }
  .down{
    color:#22EB1A
  }
  .saleTrend{
    margin-bottom: 50rpx;
    width: 90%;
    margin-left: 5%;
    margin-top: 40rpx;
  }
  .trend2020{
    height: 600rpx;
    position: relative;
  }
  .trend2019{
    height: 550rpx;
