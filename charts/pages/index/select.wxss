page{
  background-color: #102757;
  font-family: Arial !important;
}
.title {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 40rpx;
  color: #fff;
  margin: 20rpx 0 0 35rpx;
}

.tip {
  width: auto;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  color: #eee;
  margin: 30rpx 0 0 35rpx;
}

.storeList {
  padding-top: 30rpx;
}

.info-box {
  position: relative;
  width: 92%;
  height: 230rpx;
  margin-left: 4%;
  background: #1e315e;
  margin-bottom: 20rpx;
  box-shadow: 0 0 5rpx #ccc;
  border-radius: 10rpx;
}

.info-box .storeIcon {
  float: left;
  margin-left: 20rpx;
  margin-top:75rpx;
  width: 80rpx;
  height: 80rpx;
}

.info-box .storeInfo {
  width: 32%;
  height: 140rpx;
  float: left;
  text-align: center;
}

.info-box .storeInfo .storeName {
  width: auto;
  height:80rpx;
  line-height: 230rpx;
  font-size: 36rpx;
  color:#fff;
  font-weight: bolder;
}

