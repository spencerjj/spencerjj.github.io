.info-box .sales{
  float: left;
}
.info-box .saleSection{
  color:white;
  text-align: center;
  margin-top:25rpx
}
.saleSection view:nth-child(2){
  font-size:25rpx;
}
.saleSection view:nth-child(1){
  font-size: 40rpx;
  font-weight: bolder;
}
.info-box .camInfo {
  width: auto;
  height: 100rpx;
  float: right;
  margin-top: 60rpx;
  margin-right: 50rpx;
  text-align: center;
  color:#fff
}

.info-box .camInfo .camNum {
  color: #fff;
  font-size: 50rpx;
  font-weight: bolder;
}

.info-box .camInfo .camTip {
  color: #fff;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.info-box .arrow {
  width: 30rpx;
  height: 35rpx;
  top: 50%;
  margin-top: -17.5rpx;
  right: 15rpx;
  position: absolute;
}
.hover1{
  background: #6c91e7 !important;
}
.goods{
  position: absolute;
  top:100rpx;
  width: 100%;
}
.mytemp{
  font-size: 40rpx;
}
.back{
  display: flex;
  justify-content: right;
  flex-direction: row;
  width: 92%;
  margin-left: 4%;
}
.back button{
  width: 100%;
  border-radius: 10rpx !important;
}
.step{
  position: absolute;
  top:500rpx;
  width: 100%;
}
.rise{
  color:#fa5c5c
}
.down{
  color:#4ecb74
}