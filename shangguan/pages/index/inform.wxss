}
.selection:nth-child(3){
  border-right:none;
}
.selection:nth-child(6){
  border-right:none;
}
.show{
  transform:translateY(-100%);
  transition:0.5s;
}
.hide{
  transform:translateY(100%);
  transition:0.5s;
}
