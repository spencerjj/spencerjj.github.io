page {
  background: #fff;
  padding-top: 10rpx solid #eee;
}

.lists {
  position: relative;
  padding-left: 30rpx;
  padding-top: 10rpx;
  clear: both;
  padding-bottom: 20rpx;
  z-index: 3;
  background: white;
  border-radius: 20rpx;
  width: 86%;
  margin: 0 auto;
  margin-bottom: 30rpx;
  border: 2rpx solid #f3f3f3;
  box-shadow: 0 0 2px #ccc;
}

.selected {
  background: #cfe9fa;
  border: 2rpx solid rgb(153, 174, 243);
  box-shadow: 0 0 2px rgb(153, 174, 243);
}

.right {
  width: 100%;
}

.count {
  position: absolute;
  top: 50%;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
}

.count image {
  width: 100%;
  height: 100%;
}

.time1 {
  font-size: 30rpx;
  line-height: 35rpx;
  padding-top: 10rpx;
  font-weight: bolder;
  color: #69bcf9
}

.time1 text {
  color: #666;
  display: inline-block;
  width: 180rpx;
  font-weight: bolder;
}

.c1 {
  margin-top: 30rpx;
  position: relative
}

.c1 image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 8rpx;
  left: 20rpx
}
.c1 text {
  font-size: 30rpx;
  color: #666;
  padding-left: 10rpx;
  font-weight: bolder
}
.title {
  font-size: 35rpx;
  color: #666;
  width: 90%;
  margin: 0 auto
}

.departPicker {
  width: 97%;
  height: 80rpx;
  border-bottom: 1rpx solid #ccc;
  line-height: 80rpx;
  color: #af9d7f;
  padding-left: 10rpx;
  margin-top: 10rpx;
  position: relative;
  font-size: 40rpx;
  background: white;
  font-weight: bolder;
}

.c1Input {
  border-radius: 10rpx;
  border: 2rpx dashed rgb(214, 223, 247);
  margin-top: 20rpx;
  padding: 5rpx;
  font-size: 35rpx;
  padding-left: 10px;
  width: 96%;
  min-height: 200rpx;
  z-index: 1;
  background: #fff;
}

.bottom {
  width: 100%;
  /* margin-left: 5%; */
  padding-bottom: 100rpx;
  margin-top: 50rpx;
  z-index: 99
}


.publish {
  font-size: 35rpx;
  background: white;
  color: #af9d7f;
  border: 2rpx solid #af9d7f;
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
  text-align: center;
  border-radius: 10rpx;
}
.number {
  border-radius: 10rpx;
  border: 2rpx dashed #ccc;
  margin-top: 10rpx;
  padding: 5rpx;
  height: 80rpx;
  font-size: 35rpx;
  padding-left: 10px;
  color: #af9d7f;
  background: white;
  word-wrap: break-word;
  font-weight: bolder;
}