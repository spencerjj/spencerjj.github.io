
page {
  background: #f7f7f7;
}
.content{
  padding-bottom: 50rpx;
  height: 100%;
  overflow: hidden;
}
.dateInput{
  width: 94%;
  margin-left: 3%;
  height: 80rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  background: #fff;
  color: #666;
  text-align: center;
  font-size: 35rpx;
  line-height: 80rpx;
  border:1rpx solid #eee;
  box-shadow: 0 0 5rpx #eee;
}
.list .top{
  width: 94%;
  margin-left: 3%;
  background: white;
  margin-top: 30rpx;
  color: #9b9b9b;
  position: relative;
  padding:20rpx 0 20rpx 0

}
.hover1{
  background:#eee
}
.active{
  color: #5cadff;
}
.expired{
  color:#9b9b9b
}
.list .name {
  margin-left: 10rpx;
  font-size: 30rpx;
  font-weight: bolder;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.list .title{
  margin-left: 10rpx;
  font-size: 30rpx;
  font-weight: bolder;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.list .state{
  position: absolute;
  top:50%;
  right:20rpx;
  color:white;
  width: 100rpx;
  height: 40rpx;
  margin-top:-20rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}
.bg1{
  background: #5cadff;
}
.bg2{
  background: #35d0a3;
}
.bg3{
  background: red;
}
.arraw {
  width: 30rpx;
  height: 35rpx;
  top: 50%;
  margin-top: -17.5rpx;
  right: 15rpx;
  position: absolute;
  transform: rotate(270deg);
}
.call {
  width: 40rpx;
  height: 45rpx;
  top: 50%;
  margin-top: -22.5rpx;
  right: 20rpx;
  position: absolute;
}
.selected{
  transform: rotate(180deg);
}

.details{
  height: 0;
  opacity: 0;
  margin-left: 100%;
  transition: 0.2s linear;
}
.show{
  height: 100%;
  margin-left: 0;
  opacity: 1;
}
.list .detail{
  width: 94%;
  margin-left: 3%;
  height: 80rpx;
  background: white;
  color: #9b9b9b;
  line-height: 80rpx;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom:2rpx solid #eee;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-weight: bolder;
}
.list .detail:first-child{
  border-top:2rpx solid #eee;
}
.dtitle{
  display:inline-block;
  width: 23%;
}
.do image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 25rpx;
  float:left;
  margin-left: 37%;
  margin-right: 10rpx;
}
.do{
  text-align: center;
  color: #5cadff !important;
}
.dotext{
  float: left;
}
.nullDataInfo{
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #ddd;
  padding-top: 50rpx;
  padding-bottom:30rpx
}

.buskmark{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}
.buskmark image{
  width:50rpx;
  height: 50rpx;
  animation: loadingRotate 0.8s linear infinite
}

@keyframes loadingRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}
.add{
  position: fixed;
  right:20rpx;
  bottom: 100rpx;
  z-index: 99;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: white;
  text-align: center;
  border-radius: 50%;
  box-shadow: 0 0 5px 5px #eee;
}
.add image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.addTap{
  background: #eee;
}
