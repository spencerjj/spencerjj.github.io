/* pages/index/guide.wxss */
.main{
  width: 100%;
  overflow-x:hidden
}
.title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 3%;
  background: #eee;
  font-size: 30rpx;
  color: #999;
  clear: both;
}
.selection{
  float:left;
  width: 50%;
  background: white;
  font-size: 35rpx;
  border-bottom: 2rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
}
.selection:nth-child(2n){
  border-right:2rpx solid #eee;
  box-sizing: border-box;
}
.tap{
  background: #eee;
}