page{
  background: #f9f9f9;
  height:100%
}
.container {
  width: 100%;
  overflow-x: hidden;
}

.title {
  font-size: 40rpx;
  color: #666;
  width: 90%;
  margin-left: 5%;
  position: relative;
}

.main {
  border-radius: 10rpx;
  border: 2rpx dashed #ccc;
  margin-top: 30rpx;
  padding: 5rpx;
  height: 80rpx;
  font-size: 40rpx;
  text-align: center;
  color: #af9d7f;
  font-weight: bolder;
  width: 90%;
  margin-left: 5%;
}

.btm {
  border-radius: 10rpx;
  border: 2rpx solid #ccc;
  margin-top: 30rpx;
  padding: 5rpx;
  height: 80rpx;
  font-size: 35rpx;
  z-index: 1;
  color: rgb(51, 51, 51)
}

.introduce {
  border-radius: 10rpx;
  border: 2rpx solid #ccc;
  margin-top: 30rpx;
  padding: 10rpx;
  font-size: 35rpx;
  padding-left: 10px;
  width: 96%;
  color: rgb(51, 51, 51)
}

.c1 {
  margin-top: 20rpx;
  position: relative
}

.c1 image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 8rpx;
  left: 20rpx
}

.c1 text {
  font-size: 30rpx;
  color: #666;
  padding-left: 10rpx;
  font-weight: bolder;
}

.codePicker {
  width: 99%;
  margin-left: 1%;
  height: 440rpx;
  color: #af9d7f;
  margin-top: 10rpx;
  position: relative;
  font-weight: bolder;
  text-align: center;
  text-align: left;
  border: 1rpx solid #ccc;
  overflow: hidden;
}

