}
.top{
    width: 100%;
    text-align: center;
    position: absolute;
    top:-50rpx;
}
.profile image{
    width: 130rpx;
    height: 130rpx;
}
.allSecion{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.section{
    width: 25%;
    height: 160rpx;
    text-align: center;
    font-size: 33rpx;
    /* font-weight: bolder; */
    padding-top: 30rpx;

}
.section{
    border-top: none;
    border-left: none;
}
.section:nth-child(1){
    border-top: 5rpx solid #f7f7f7;
}
.section:nth-child(2){
    border-top: 5rpx solid #f7f7f7;
}
