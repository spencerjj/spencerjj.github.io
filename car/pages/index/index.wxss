/* pages/index/index.wxss */
page{
  background:#f9f9f9
}
.container{
  width: 100%;
  position: relative;
}
.fadeImg{
  position: absolute;
  width: 100%;
  top: 210rpx;
  height: 100rpx;
}
.action{
  width: 92%;
  margin-left: 4%;
  border-radius: 10rpx;
  background:#fff;
  min-height: 500rpx;
  padding-bottom:20rpx;
  position: absolute;
  top:225rpx;
  overflow: hidden;
}

.start,.end{
  width: 92%;
  margin-left: 4%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  background:#f5f5f5;
  margin-top:20rpx;
  position: relative;
}
.start input,.end input{
  height: 100rpx;
  line-height: 100rpx;
  color:#000;
  font-weight: bolder;
  width: 85%;
  margin-left: 15%;
}
.point{
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  border-radius: 10rpx;
  top:50%;
  left: 6%;
  margin-top:-7.5rpx
}
.icon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 10rpx;
  left: 5%;
  margin-top:5rpx
}
.icon image{
  width: 100%;
  height: 100%;
}
.p1{
  background:#29be29;
}
.p2{
  background:orange;
}
.time{
  width: 92%;
  margin-left: 4%;
  height: 100rpx;
  margin-top:20rpx;
  line-height: 100rpx;
}
.time image{
  width: 40rpx;
  height:40rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top:30rpx;
  vertical-align: middle;
  float: left;
}
.tnotice{
  color:#ccc;
  font-weight: bolder;
  float: left;
}
.comment image{
  width: 40rpx;
  height:40rpx;
  float:left;
  margin-top:30rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
.cnotice{
  color:#ccc;
  font-weight: bolder;
  width: 70%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display: inline-block;
}
.notice{
  color:#ccc;
  font-weight: bolder;
}
.infos{
  display: flex;
  justify-content: center;
  flex-direction: row;
  width: 92%;
  margin-left: 4%;
  height: 100rpx;
  line-height: 100rpx;
}
.infos view{
  width: 50%;
}
.number image{
  width: 40rpx;
  height:40rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top:-8rpx;
  vertical-align: middle;
}
.step{
  position: fixed;
  bottom:0rpx;
  padding-bottom: 30rpx;
  width: 100%;
  background:white;
  box-shadow: 0rpx 0rpx 20rpx 10rpx #eee
}
.btn{
  width: 92%;
  margin-left: 4%;
  margin-top:10rpx;
  height: 80rpx;
  background-image: linear-gradient(to right, #46b6b4 , #59d299);
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin-bottom:20rpx;
  color:white;
  box-shadow: 5rpx 5rpx 20rpx 1rpx #86cfad;
}
.dark{
  color:#000
}
.comContent{
  height:350rpx;
  width: 90%;
  margin-left: 5%;
  overflow:hidden
}
.myComment{
  height: 180rpx;
  margin-top:25rpx;
  margin-bottom:25rpx;
  width:100%;
  padding:10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background:#f5f5f5;
  position: relative;
}
.commentPlace{
  color:#666 !important
}
.num{
  position: absolute;
  top:250rpx;
  right:8%;
  font-size: 20rpx;
  color:#999
}
.comBtn{
  width: 100%;
  height: 80rpx;
  background-image: linear-gradient(to right, #46b6b4 , #59d299);
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin-bottom:20rpx;
  color:white;
  box-shadow: 5rpx 5rpx 20rpx 1rpx #86cfad;
}