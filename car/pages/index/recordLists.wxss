/* pages/index/recordLists.wxss */
page{
  background:#f9f9f9
}
.item{
  width: 92%;
  margin-left: 4%;
  background:white;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 5rpx 5rpx #eee;
  margin-top: 20rpx;
  padding-top:20rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  color:#555;
  position: relative;
  font-size: 28rpx;
}
.itemHover{
  background:#eee
}
.detail{
  width: 92%;
  margin-left: 20rpx;
  min-height: 30rpx;
  display: flex;
  font-size: 28rpx;
}
.detail .num{
  color:#37a1da;
  font-weight: bolder;
  background:rgba(111, 217, 243, 0.1);
  height: 30rpx;
  line-height: 30rpx;
  min-width: 50rpx;
  padding:8rpx;
}
.detail .comment{
  color:#e66a4b;
  background:rgb(234, 141, 117,0.1);
  min-height: 30rpx;
  line-height: 30rpx;
  padding:8rpx;
  margin-left: 20rpx;
}
.section{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}
.s1{
  height: 70rpx;
  line-height: 70rpx;
}
.left{
  width: 8%;
  text-align: center;
  position: relative;
}
.left image{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  margin-top:-8rpx
}
.point{
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  border-radius: 10rpx;
  top:50%;
  left: 50%;
  margin-top:-7.5rpx;
  margin-left:-7.5rpx
}
.p1{
  background:#29be29;
}
.p2{
  background:orange;
}
.state{
  position:absolute;
  top:35rpx;
  right:20rpx;
  color:#999
}
.state1{
  position:absolute;
  top:35rpx;
  right:20rpx;
  color:#29b6be
}
.nullDataInfo{
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #ddd;
  padding-top: 50rpx;
  padding-bottom:30rpx
}

.buskmark{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}
.buskmark image{
  width:50rpx;
  height: 50rpx;
  animation: loadingRotate 0.8s linear infinite
}

@keyframes loadingRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}

.nodata{
  width: 205rpx;
  height: 140rpx;
  margin:0 auto;
  margin-top:50%
}
.nodata image{
  width: 100%;
  height: 100%
}
.nodata .notext{
  width: 100%;
  margin-top:20rpx;
  font-weight: bolder;
  color: #999;
  text-align: center
}
.add{
  position: fixed;
  right:20rpx;
  bottom: 100rpx;
  z-index: 99;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: white;
  text-align: center;
  border-radius: 50%;
  box-shadow: 0 0 5px 5px #eee;
}
.add image{
  width: 40rpx;
  height: 40rpx;
  margin-top:15rpx
}
.addTap{
  background: #eee;
}